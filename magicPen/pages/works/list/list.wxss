.upload-frame { width: 100%; height: 480rpx; background-color: #3a3a3a; display: flex; justify-content: center; align-items: center;}
.upload-frame .img { width: 100%; height: 100%;}
.upload-frame .btn { width: 150rpx;}

.person-info { height: 110rpx; background-color: #ffffff; display: flex; justify-content: space-between; padding: 0 100rpx; position: relative;}
.person-info .avatar { width: 120rpx; height: 120rpx; border-radius: 50%; border: 4rpx solid #c1c1c1; position: absolute; top: -120rpx; left: 311rpx;}
.person-info .avatar image { width: 100%; height: 100%; border-radius: 50%;}

/*.person-info .info { margin-left: 25rpx;}*/
.person-info .info .name { font-size: 28rpx; line-height: 28rpx; color: rgb(53,53,53); margin-top: 18rpx; margin-bottom: 15rpx; letter-spacing: 3rpx; text-align: center;}
.person-info .info .fans { font-size: 20rpx; line-height: 20rpx; color: #c1c1c1; letter-spacing: 2rpx; text-align: center;}

/*.person-info .zans { margin-left: 25rpx;}*/
.person-info .zans { display: flex; flex-direction: column; align-items: center;}
.person-info .zans image { width: 60rpx; margin-top: 0rpx;}
.person-info .zans .title { font-size: 20rpx; line-height: 20rpx; color: #c1c1c1z; letter-spacing: 2rpx; text-align: center;}

.person-info .medal { display: flex; flex-direction: column; align-items: center; position: relative;}
.person-info .medal image { width: 60rpx; margin-bottom: 0rpx;}
.person-info .medal view { font-size: 20rpx; line-height: 20rpx; color: #c1c1c1; letter-spacing: 2rpx; text-align: center;}
.person-info .medal .icon { position: absolute; top: 5rpx; right: -50rpx;}

.tabs { height: 80rpx; display: flex; justify-content: space-around; background-color: #eff2f9;}
.tabs view { height: 100%; font-size: 32rpx; color: rgb(61,153,173); display: flex; align-items: center;}
.tabs view.active { color: rgb(255,153,0);}

.works-list{ background-color: #eff2f9; overflow: hidden;}

.attention-item { border-bottom: 1px solid #f0f0f0; justify-content: left; position: relative;}
.attention-item .info { margin-left: 80rpx;}
.attention-item .btn { width: 190rpx; height: 54rpx; border: 1px solid #eff2f9; background-color: #eff2f9; border-radius: 20rpx; color: #99a3ac; font-size: 24rpx; display: flex; justify-content: center; align-items: center; position: absolute; right: 50rpx; top: 48rpx;}