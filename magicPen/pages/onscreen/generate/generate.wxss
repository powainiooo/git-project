.generate-frame { width: 100%; height: 100vh; overflow: hidden; position: relative;}
.camera-frame { width: 100%; height: 100vh; overflow: hidden; position: absolute; top: 0; left: 0;}
.camera-container { width: 233rpx; height: 233rpx; position: relative; top: 184rpx; left: 233rpx;}
.camera-container .cover{ width: 750rpx; position: fixed; top: 0; left: 0; bottom: 140rpx; overflow: hidden;}
.camera-container .cover cover-image{ width: 750rpx; height: 1333rpx; position: relative;}

.animation-frame { width: 100%; height: 100vh; overflow: hidden;}
.animation-frame .photos { position: absolute;}
.animation-frame .cover { width: 750rpx; height: 1333rpx; position: absolute; top: 0; left: 0;}

.btns-frame { width: 100%; height: 140rpx; background-color: #ffffff; display: flex; justify-content: space-around; align-items: center; position: absolute; left: 0; bottom: 0; transition: bottom 0.3s ease-out;}
.btns-frame .btn { width: 240rpx; height: 58rpx; border: 4rpx solid #999999; border-radius: 15rpx; font-size: 28rpx; color: #999999; display: flex; justify-content: center; align-items: center; letter-spacing: 8rpx;}
.btns-frame .btn image { width: 38rpx; margin-right: 10rpx;}

.btns-frame .btn2 { width: 100rpx; display: flex; flex-direction: column; align-items: center;}
.btns-frame .btn2 image { width: 50rpx; height: 50rpx; margin-bottom: 20rpx;}
.btns-frame .btn2 view { font-size: 22rpx; color: #999999;}

.btns-frame .btn3 { width: 240rpx; position: absolute; top: -100rpx; left: 265rpx;}

.btns-frame .count { width: 100%; height: 100%; font-size: 32rpx; color: #ff3067; position: absolute; top: 0; left: 0; display: flex; justify-content: center; align-items: center;}

.modal-content .txt1 { font-size: 32rpx; color: #30aac2; text-align: center; padding: 60rpx 50rpx;}
.modal-content .btn { width: 240rpx; margin: 0 auto 50rpx auto;}