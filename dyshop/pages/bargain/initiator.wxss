/* pages/bargain/initiator.wxss */
@import '../../utils/weui.wxss';

page {
  background: #f3f3f3;
}
button::after{
border:none;
}
.itemList {
  width: 690rpx;
  height: 270rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin: 15rpx auto;
  display: flex;
  align-items: center;
  position: relative;
}

.itemList .img image {
  width: 206rpx;
  border-radius: 4rpx;
  margin: 32rpx 18rpx;
}

.itemList .content {
  margin-right: 18rpx;
}

.itemList .content text {
  display: block;
}

.itemList .content .title {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  height: 95rpx;
  overflow: hidden;
}

.itemList .content .base_price {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(236, 61, 82, 1);
  margin-top: 20rpx;
}

.itemList .content .base_price text {
  display: inline-block;
}

.itemList .content .base_price .money {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(236, 61, 82, 1);
}

.itemList .content .price {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 20rpx;
}

.initiator .background {
  width: 750rpx;
  height: 214rpx;
  background: #eb3349;
  border-bottom-right-radius: 35rpx;
  border-bottom-left-radius: 35rpx;
}

.initiator .goods {
  margin: 0 30rpx;
  width: 690rpx;
  height: 490rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  position: absolute;
  top: 30rpx;
  z-index: 99;
}

.initiator .goods .tip {
  padding: 40rpx 0;
  margin: 0 20rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(243, 243, 243, 1);
}

.initiator .goods .tip text {
  display: block;
}

.initiator .goods .tip .t1 {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 20rpx;
}

.initiator .goods .tip .t2 {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.initiator .input {
  margin: 0 auto;
  width: 690rpx;
  /* height: 255rpx; */
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin-top: 330rpx;
}

.initiator .input .text {
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(243, 243, 243, 1);
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.initiator .btns {
  width: 621rpx;
  height: 110rpx;
  background: linear-gradient(90deg, rgba(235, 51, 73, 1) 0%, rgba(244, 92, 67, 1) 100%);
  border-radius: 55rpx;
  margin-top: 50rpx;
}

.initiator .btns .b1 {
  margin-top: 20rpx;
  font-size: 36rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.initiator .btns .b2 {
  margin-top: 10rpx;
  font-size: 28rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.addressList {
  position: relative;
}

.addressList .title {
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-top: -40rpx;
}

.addressList .List {
  display: flex;
  position: relative;
  width: 710rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid #f3f3f3;
  margin-top: 10rpx;
}

.addressList .List .name {
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  -moz-text-overflow: ellipsis;
  white-space: nowrap;
}

.addressList .List .item text {
  display: block;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.addressList .List .edit image {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 20rpx;
  right: 35rpx;
}

.addressList .add {
  margin: 50rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(236, 61, 82, 1);
}

.addressList .add image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.choose {
  margin: 0 30rpx;
}

.choose .title {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin: 20rpx 0;
}

.choose .btns {
  display: flex;
  flex-wrap: wrap;
}

.choose .btns .click {
  /* width:202rpx; */
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 35rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.choose .btns .active {
  background: rgba(236, 61, 82, 1);
  color: #fff;
}

.confirm {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: rgba(236, 61, 82, 1);
  border-radius: 0;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.modal {
  width: 587rpx;
  height: 473rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 260rpx;
  position: relative;
}

.modal .title {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
  margin: 0 20rpx;
  border-bottom: 1rpx solid rgba(243, 243, 243, 1);
}

.modal .dz {
  display: flex;
  /* justify-content: space-between; */
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(243, 243, 243, 1);
}

.modal .dz .d1 {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  width: 140rpx;
}

.modal .dz .d2 {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.modal .gg {
  display: flex;
  /* justify-content: space-between; */
  margin: 0 20rpx;
  padding: 20rpx 0;
}

.modal .gg .g1 {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  width: 130rpx;
}

.modal .gg .g2 {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center
}

.modal .btns {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
}

.modal .btns .cancel {
  width: 294rpx;
  height: 98rpx;
  line-height: 98rpx;
  background: rgba(243, 243, 243, 1);
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  text-align: center;
  border-bottom-left-radius: 8rpx;
}

.modal .btns .conf {
  width: 293rpx;
  height: 98rpx;
  line-height: 98rpx;
  background: rgba(236, 61, 82, 1);
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  border-bottom-right-radius: 8rpx;
}
.picker{
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  padding:  0;
  margin: 0 20rpx;
  position: relative;
  background: #ffffff;
  height: 97rpx;
  line-height: 97rpx
}
.picker .p1{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.picker .p2{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-left: 20rpx
}
.picker .p2{
  display: flex;
  align-items: center;
  width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  -moz-text-overflow: ellipsis;
  white-space: nowrap;
}
.picker .p3 image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  top:32rpx
}