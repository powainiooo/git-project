.list-item { height: 210rpx; background-color: #ffffff; box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.1); margin: 0 auto; display: flex; box-sizing: border-box; position: relative; z-index: 1}
.list-item .list-item-left { width: 280rpx; height: 210rpx; overflow: hidden; margin-left: 20rpx;}
.list-item .list-item-img { width: 100%; height: 100%; transform: scale(1.6)}
.list-item .list-item-right { width: 380rpx; margin-left: 30rpx;}
.list-item .list-item-right .list-item-line { display: flex; justify-content: space-between; align-items: center; margin-top: 40rpx;}
.list-item .list-item-right .list-item-name { font-size: 32rpx; color: rgb(53,53,53);}
.list-item .list-item-right .list-item-name-input { width: 220rpx; min-height:40rpx; height: 40rpx; line-height: 40rpx; font-size: 24rpx; color: #999999; border: 1px solid #999999}
.list-item .list-item-right .list-item-edit { width: 30rpx;}
.list-item .list-item-right .list-item-ok { font-size: 28rpx; color: #999999; margin: 0 5rpx;}
.list-item .list-item-right .list-item-like { display: flex; margin-top: 20rpx;}
.list-item .list-item-right .list-item-like .list-item-icon{ width: 40rpx; height: 40rpx;}
.list-item .list-item-right .list-item-like .list-item-nums{ font-size: 28rpx; color: rgb(53,53,53); margin-left: 10rpx;}
.list-item .list-item-right .list-item-list { display: flex; align-items: baseline; color: rgb(141,159,170); font-size: 22rpx;}
.list-item .list-item-right .list-item-list .avatars { width: 40rpx; height: 40rpx; border-radius: 50%; margin-right: 10rpx;}
.list-item .list-item-right .list-item-line2 { font-size: 20rpx; color: #cccccc; text-align: right; margin-top: 10rpx;}

.list-item-opera-frame { width: 100%; height: 86rpx; background-color: #eff2f9; overflow: hidden; transition: height 0.3s ease-out;}
.list-item-opera { width: 100%; height: 86rpx; display: flex; justify-content: space-around; align-items: center;}
.list-item-opera .btn-item { display: flex; align-items: flex-end; font-size: 20rpx; color: #999999; position: relative;}
.list-item-opera .btn-share { width: 100%; height: 100%; position: absolute; top: 0; left: 0; opacity: 0;}
.list-item-opera .btn-item .btn-item-icon { width: 50rpx; margin-right: 10rpx;}
.list-item-opera .time { font-size: 20rpx; color: #999999; margin-top: 20rpx}

.list-item .list-item-arrow { position: absolute; left: 60%; bottom: 10rpx; transition: transform 0.3s linear}
.list-item .list-item-arrow-back { transform: rotateZ(180deg)}