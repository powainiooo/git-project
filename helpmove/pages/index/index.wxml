<view class="container">
   <image src="../../res/images/bg1.jpg" mode="widthFix" class="bg1"></image>
   <image src="../../res/images/bg2.jpg" mode="widthFix" class="bg2"></image>
   <view class="frame">
      <view class="input {{name === '' ? 'input-placeholder' : ''}}" style="margin-top: 110rpx;">
         <view class="icons icon-person"></view>
         <input placeholder="联系人" placeholder-style="color: #889286;" value="{{name}}" data-key="name" bindinput="bindKeyInput"/>
      </view>
      <view class="input {{phone === '' ? 'input-placeholder' : ''}}">
         <view class="icons icon-phone"></view>
         <input type="number" placeholder="联系方式" placeholder-style="color: #889286;" value="{{phone}}" data-key="phone" bindinput="bindKeyInput"/>
      </view>
      <button type="default" class="btn">立即预约</button>
   </view>
</view>
