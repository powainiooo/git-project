.vip-frame { height: 440rpx;}
.vip-item { width: 650rpx; text-align: center; margin: 0 15rpx;}
.vip-item .img { width: 100%; height: 384rpx; transition: transform 0.15s cubic-bezier(.18,.47,.31,.96); box-shadow: 0 25rpx 15rpx rgba(0, 0, 0, 0.1);}
.vip-item .img-tap { transform: scale(0.95)}
.vip-item .img image { width: 100%; display: block;}
.vip-item .tips { color: #898989; font-size: 24rpx; text-align: center; margin-top: 30rpx;}
