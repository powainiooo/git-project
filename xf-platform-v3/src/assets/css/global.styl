@import "mixin.styl"

*
  margin 0
  padding 0
  box-sizing border-box
body
  &::-webkit-scrollbar
    width 2px
    background-color transparent
  &::-webkit-scrollbar-thumb
    background-color #5B85E6
.ivu-btn
  height 40px
  line-height 40px
  border-radius 10px
  border none
  bgG()
  color #ffffff
  box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.15)
  &[disabled]
    background #C8C9CA
    color  #ffffff
  &[disabled]:hover
    background #C8C9CA
    color  #ffffff
  &:hover
    color #ffffff
.flex
  display flex
.center
  center()
.between
  between()
.acenter
  acenter()

.ivu-input
  border none
  background-color #EEEEEF
  height 40px
  color #000000
  border-radius 10px
  padding 4px 10px
  &::-webkit-input-placeholder
    color: #9E9E9F

.ivu-btn-small
  min-width 90px
  height 30px
  line-height 30px
.ivu-input-group-append
  background-color transparent
  padding 0
  border-radius 0 10px 10px 0
  overflow hidden
  border none
  .ivu-btn
    color #ffffff
    font-size 10px

.ivu-btn-normal
  background #ffffff
  color #6D9BF5
  &:hover
    color #6D9BF5
.ivu-btn-error
  background linear-gradient(342deg, #E63828 0%, #E85412 100%)
.ivue-btn-cancel
  background #C8C9CA
  &:hover
    background #C8C9CA

.ivu-select-single
  .ivu-select-selection
    height 40px
    border none
    border-radius 10px
    background-color #EEEEEF
    .ivu-select-placeholder
      height 40px
      line-height 40px
      color #9E9E9F
      padding-left 10px
    .ivu-select-arrow
      color #ffffff
      z-index 5
      right 14px
    .ivu-select-selected-value
      height 40px
      line-height 40px
    &:after
      content ''
      size(40px, 40px)
      line-height 40px
      abBR(0, 0)
      bgG()
      border-radius 0 10px 10px 0
      color rgba(255, 255, 255, .5)
.txt
  font-size 10px
  line-height 15px
  color #9E9E9F
  text-decoration none
.txt2
  font-size 10px
  line-height 15px
  color #C8C9CA
  text-decoration none
  span
    color #000000
.flip-box
  size(300px)
  border-radius 10px
  overflow hidden
  position relative
  background-color #ffffff
  -webkit-mask-image url('data:image/png;base64,')
  -webkit-mask-repeat no-repeat
  -webkit-mask-size 300px 436px
  -webkit-mask-position right bottom
  &:after
    content ''
    size(57px, 57px)
    abBR(0, 0)
    background-image url('data:image/png;base64,')
    background-repeat no-repeat
    background-size 100% 100%
.flip-box-min
  position relative
  -webkit-mask-image url('data:image/png;base64,')
  -webkit-mask-repeat no-repeat
  -webkit-mask-size 420px 280px
  &:after
    content ''
    size(48px, 48px)
    abBR(0, 0)
    background-image url('data:image/png;base64,')
    background-repeat no-repeat
    background-size 100% 100%

.form
  margin 40px 25px 30px 25px
  position relative
  &-title
    font-size 18px
    line-height 1
    margin-bottom 20px
  .ivu-form-item
    margin-bottom 10px
  .txt
    margin-left 10px
.tab-bar
  height 40px
  display flex
  border-radius 10px
  overflow hidden
  &>.ivu-radio-wrapper
    background-color #EEEEEF
    height 40px
    line-height 40px
    border none
    flex 1
    center()
    cursor pointer
    font-size 14px
    color #9E9E9F
    &:hover
      color #9E9E9F
    &:first-child
      border none
  &>.ivu-radio-wrapper-checked
    &:not(.ivu-radio-wrapper-disabled)
      bgG()
      &:hover
        bgG()
  &-active
    bgG()
    color #ffffff
.tab-bar-min
  height 25px
  border-radius 5px
  &>.ivu-radio-wrapper
    height 25px
    line-height 25px
    padding 0 10px
  .tab-bar-item
    font-size 10px
.hint-list
  list-style none
  margin 0 25px
  li
    center()
    margin-bottom 18px
    .index
      width 25px
      margin-right 5px
      img
        display block
        height 100%
    .txt2
      flex 1
.notice-list
  li
    padding 20px 0
    position relative
    margin-bottom 0
    &:after
      content ''
      position absolute
      bottom 0
      left -25px
      right -25px
      height 1px
      background-color #EEEEEF


.form-grid
  display flex
  height 100%
  .form-col
    flex 1
    position relative
    &:after
      content ''
      width 1px
      height 100%
      abTL(0, 100%)
      background-color #EEEEEF
    &:last-child:after
      width 0
  .col1
    flex 1
  .col2
    flex 2
  .form-cell
    padding 20px 25px
    margin 0 -25px
    border-bottom 1px solid #EEEEEF

.c-search
  size(250px, 30px)
  border-radius 10px
  background-color #EEEEEF
  acenter()
  input
    size(160px, 30px)
    line-height 30px
    border none
    background-color transparent
    padding 0 10px
  button
    width 90px

.c-tables
  margin 0 20px
  position relative
  border-top 1px solid #EEEEEF
  border-bottom 1px solid #EEEEEF
  table
    width 100%
    thead
      th
        height 50px
        vertical-align middle
        color #C8C9CA
        font-weight normal
        font-size 14px
        text-align left
        &:first-child
          padding-left 30px
    tbody
      .style1
        font-size 18px
        color #6D9BF5
        font-family HelveB
      .style2
        bgG()
        color #ffffff
      .style3
        font-size 18px
        font-family HelveB
      tr
        td
          vertical-align top
          &>div
            min-height 85px
            padding-top 20px
            padding-right 20px
            font-size 14px
            color #9E9E9F
          &:first-child
            border-radius 10px 0 0 10px
            padding-left 30px
          &:last-child
            border-radius 0 10px 10px 0
            &>div
              border-radius 0 10px 10px 0
        .status
          width 70px
          text-align center
      tr:nth-child(2n-1)
        td
          background-color #EEEEEF

.xf-page
  .ivu-page-item,.ivu-page-prev,.ivu-page-next
    border-radius 10px
  .ivu-page-item
    a
      color #C8C9CA
    &:hover
      border-color #5B85E6
      a
        color #5B85E6
  .ivu-page-item-active
    border-color transparent
    bgG()
    a
      color #ffffff



.xf-radios
  .ivu-radio-wrapper
    margin-right 38px
    color #C8C9CA
  .ivu-radio-inner
    size(20px, 20px)
    border-color #6D9BF5
    &:after
      size(10px, 10px)
      top 4px
      left 4px
      bgG()
.anim-detail
  animation-duration .5s
  animation-timing-function cubic-bezier(.25,.76,.36,.97)

.warnTxt
  position absolute
  span
    display inline-block
    max-width 200px
    height 22px
    line-height 22px
    padding 0 8px
    background #C8C9CA linear-gradient(349deg, #E63828 0%, #E85412 100%)
    box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.15)
    font-size 8px
    border-radius 4px
    color #ffffff
  &:before
    content ''
    size(0, 0)
    border 4px solid rgba(0, 0, 0, 0)
    abTL(8px, -8px)
    border-right-color #E63828
.warnTxt-right
  text-align right
  &:before
    left auto
    right -8px
    border-right-color rgba(0, 0, 0, 0)
    border-left-color #E63828
