
.indexSearch {
   height: 210rpx;
   background-color: #02a0e9;
   display: flex;
   justify-content: center;
   align-items: flex-start;
   border-radius: 0 0 40rpx 40rpx;
}
.indexSearch .serch {
   width: 490rpx;
   background-color: #fff;
   border: 1px solid #02a0e9;
   margin-top: 10rpx;
}
.indexSearch .logo {
   width: 100rpx;
   margin-top: 20rpx;
   margin-right: 20rpx;
}
.indexSearch .btn-type {
   width: 50rpx;
   height: 50rpx;
   margin-top: 14rpx;
   margin-left: 20rpx;
   display: flex;
   justify-content: center;
   align-items: center;
}
.indexSearch .btn-type image {
   width: 37rpx;
   height: 37rpx;
}

.index-banner {
   position: relative;
   margin: -120rpx 22rpx 0 22rpx;
}
.index-banner swiper {
   height: 360rpx;
}
.index-banner swiper-item {
   border-radius: 10rpx;
}
.index-banner swiper navigator {
   width: 100%;
   height: 100%;
}
.index-banner swiper image {
   width: 100%;
   height: 100%;
}

.brands .title {
   margin: 58rpx 0;
}
.brands-list {
   margin: 0 15rpx;
   display: flex;
   flex-wrap: wrap;
}
.brands-list view {
   width: 157rpx;
   height: 80rpx;
   background: #FFFFFF;
   border: 1px solid #ECEEF0;
   border-radius: 2px;
   margin: 0 10rpx 30rpx 10rpx;
}
.brands-list view navigator {
   width: 100%;
   height: 100%;
}
.brands-list view image {
   width: 100%;
   height: 100%;
}

.index-type-list1 {
   margin: 35rpx 30rpx 10rpx 30rpx;
   display: flex;
   flex-wrap: wrap;
}
.index-type-list1 view {
   width: 342rpx;
   height: 174rpx;
   display: block;
   margin-right: 6rpx;
   margin-bottom: 6rpx;
}
.index-type-list1 view:nth-child(2n) {
   margin-right: 0;
}
.index-type-list1 navigator {
   width: 100%;
   height: 100%;
}
.index-type-list1 image {
   width: 100%;
   height: 100%;
}

.index-type-list2 {
   margin: 0 30rpx 124rpx 30rpx;
}
.index-type-list2 view{
   width: 166rpx;
   height: 230rpx;
   background: #FFFFFF;
   border: 1px solid #EFEFEF;
}
.index-type-list2 navigator {
   width: 100%;
   height: 100%;
}
.index-type-list2 image {
   width: 100%;
   height: 100%;
}
