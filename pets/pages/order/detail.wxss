.container-order{ margin-bottom: 20rpx;}
.order-time{ background-color: #dac49f; padding: 0 40rpx;}
.order-time .line{ height: 110rpx; box-sizing: border-box; padding: 0 20rpx; display: flex; align-items: center;  justify-content: space-between;}
.order-time .line .month{ font-size: 60rpx; font-family: 'Helve';text-shadow: 0 0 3px rgba(55,44,30,0.25);}
.order-time .line .week { font-size: 24rpx; color: #ffffff; text-align: center;}

.store-item{ padding: 30rpx 60rpx; position: relative; border-bottom: 1px solid #ebeae8;}
.store-item .title{ width: 450rpx; font-size: 60rpx; text-shadow: 0 0 3px rgba(55,44,30,0.25); letter-spacing: 8rpx; margin-bottom: 30rpx;}
.store-item .address{ width: 450rpx; font-size: 30rpx; letter-spacing: 5rpx;}
.btn-map{ width: 140rpx; height: 70rpx; position: absolute; top: 50%; right: 60rpx; margin-top: -35rpx; background-color: #d9c39f; border-radius: 40rpx; font-size: 20rpx; color: #ffffff; display: flex; justify-content: center; align-items: center;transition:transform 0.15s ease-out;}
.btn-map-hover{ transform: scale(0.9);}

.person-frame { background-color: #efebea; padding-bottom: 10rpx;}
.person-info{ padding: 40rpx 50rpx 0 50rpx; height: 150rpx; box-sizing: border-box; display: flex; align-items: center; position: relative;}
.person-info .title { font-size: 24rpx; color: #9d9c9a; position: absolute; top: 30rpx; left: 60rpx;}
.person-info .item{ width: 50%; border-bottom: 1rpx solid #cdc9c8; font-size: 35rpx; padding-bottom: 10rpx; padding-left: 10rpx; position: relative;}
.person-info .item::before{ content: ''; width: 10rpx; height: 10rpx; border-radius: 50%; background-color: #cdc9c8; position: absolute; bottom: -5rpx; left: -5rpx;}
.person-info .item:last-child::after{ content: ''; width: 10rpx; height: 10rpx; border-radius: 50%; background-color: #cdc9c8; position: absolute; bottom: -5rpx; right: -5rpx;}

.packages-item{ width:100%; padding: 30rpx 35rpx; position: relative; box-sizing: border-box; margin-top: 10rpx;}
.packages-item .line1{ display: flex; justify-content: space-between; align-items: center; padding: 0 25rpx 10rpx 25rpx; position: relative;}
.packages-item .line1 .name{ font-size: 30rpx;text-shadow: 0 0 3px rgba(55,44,30,0.25);}
.packages-item .line2{ padding: 50rpx 120rpx 0 25rpx; display: flex; box-sizing: border-box;}
.packages-item-selected .line2{ border-top: 1rpx solid #e3d8c6;}
.packages-item .line2 .pro-item{ width: 130rpx; height: 106rpx; position: relative; margin-right: 35rpx; margin-bottom: 35rpx;}
.packages-item .line2 .pro-item .frame{ width: 100%; height: 100%; background-color: #e7e3e2; border-radius: 10rpx; transition:transform 0.15s ease-out; position: relative;}
.packages-item .line2 .pro-item-hover .frame{ transform: scale(0.9);}
.packages-item .line2 .pro-item::after{ content: '+'; font-size: 30rpx; color: #e7e3e2; position: absolute; top: 35rpx; right: -28rpx;}
.packages-item .line2 .pro-item:last-child::after{ content: '';}
.packages-item .line2 .pro-item image{ width: 130rpx; height: 130rpx; position: absolute; bottom: 0; left: 0;}
.packages-item .line3{ font-size: 28rpx; color: #e7e3e2; padding-left: 25rpx;}

.tips-frame{ padding:0 60rpx; height: 330rpx; box-sizing: border-box; background-color: #9d9c9c; overflow: hidden; display: flex; flex-direction: column; justify-content: center;}
.tips-frame .icon-tips{ font-size: 70rpx; color: #ffffff; margin-bottom: 10rpx;}
.tips-frame text{ font-size: 30rpx; line-height: 1.8; letter-spacing: 4rpx; color: #ffffff;}

.code-frame{ margin: 60rpx 10rpx; display: flex; justify-content: space-between; align-items: center; font-size: 100rpx; font-family: 'Helve';text-shadow: 0 0 3px rgba(55,44,30,0.25);}
.code-frame view { width: 166rpx; height: 166rpx; border: 1px solid #d7c39e; border-radius: 8rpx; display: flex; justify-content: center; align-items: center; font-size: 120rpx; color: #372c1e; text-shadow: 0 0 3px rgba(55,44,30,0.25);}

.time-frame{ padding:120rpx 60rpx;}

.store-item .btns{ display: flex; justify-content: center; align-items: center; font-size: 60rpx;}
.store-item .btns>view { position: relative;}
.store-item .btns .icon-weixuan{ color: #e7e3e0; display: block; margin-right: 30rpx;}
.store-item .btns .icon-xuanzhong{ color: #d9c39f; position: absolute; top: 50%; left: 15rpx; font-size: 50rpx; margin-top: -30rpx;}
.store-item .btns .icon-cuowu{ color: #d9c39f; position: absolute; top: 50%; left: 15rpx; font-size: 36rpx; margin-top: -20rpx;}
.store-item .btns .btn-map{ width: 140rpx; height: 70rpx; background-color: #d9c39f; border-radius: 40rpx; font-size: 20rpx; color: #ffffff; display: flex; justify-content: center; align-items: center; box-shadow: 0 0 6rpx rgba(0,0,0,0.1);}
.store-item .btns .text{ font-size: 100rpx; color: #e7e3e0; font-weight: 100;}
.store-item .btns view:first-child{display: flex; align-items: center;}