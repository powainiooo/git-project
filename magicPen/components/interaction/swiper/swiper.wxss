.swiper-bg { width: 100%; height: 622rpx;}
.swiper-light { width: 440rpx; height: 440rpx; position: absolute; top: 100rpx; left: 155rpx; animation: light 10s linear infinite;}
@keyframes light {
   0% { transform: rotateZ( 0deg )}
   100% { transform: rotateZ( 360deg )}
}
.swiper-frame { width: 100%; height: 622rpx; position: absolute; top: 0; left: 0;}
.swiper-frame .swiper-item { width: 250rpx; display: flex; justify-content: center; align-items: center; margin-top: 200rpx;}
.swiper-frame .icon { width: 250rpx; height: 250rpx; transform: scale(0.6); transition: transform 0.3s linear;}
.swiper-frame .current { transform: scale(1.2);}