/* pages/product/index.wxss */
.filter-container {
   width: 100%;
   height: 100vh;
   position: fixed;
   top: 0;
   left: 0;
   background-color: rgba(0, 0, 0, .6);
   z-index: 1000;
}
.filter-frame {
   width: 88%;
   height: 100%;
   background-color: #ffffff;
   position: absolute;
   top: 0;
   right: 0;
   padding: 40rpx 30rpx 130rpx 30rpx;
   box-sizing: border-box;
}
.filter-frame .item {
   height: 60rpx;
   border-radius: 5rpx;
   background-color: #F6F6F6;
   font-size: 24rpx;
   line-height: 40rpx;
   padding: 12rpx 40rpx;
   text-align: center;
   box-sizing: border-box;
}
.filter-title {
   font-size: 30rpx;
   color: #222222;
   margin: 0 0 24rpx 5rpx;
   display: flex;
   align-items: center;
}
.filter-title image {
   width: 24rpx;
   height: 15rpx;
   margin-left: 18rpx;
}
.filter-price {
   display: flex;
   align-items: center;
   margin-bottom: 40rpx;
}
.filter-price .item {
   width: 260rpx;
   line-height: 60rpx;
   padding: 12rpx 0;
}
.filter-price span {
   width: 140rpx;
   font-size: 30rpx;
   color: #222222;
   text-align: center;
}
.filter-list {
   display: flex;
   flex-wrap: wrap;
   margin: 0 -10rpx 40rpx -10rpx;
}
.filter-list .item {
   margin:0 10rpx 20rpx 10rpx;
}

.filter-list .item-active {
   background-color: #F1380D;
   color: #ffffff;
}
.filter-btns {
   width: 88%;
   position: absolute;
   bottom: 0;
   right: 0;
   display: flex;
}
.filter-btns button {
   height: 100rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 30rpx;
   color: #ffffff;
}
.filter-btns button:first-child {
   width: 280rpx;
   background-color: #00A7D7;
}
.filter-btns button:last-child {
   width: 380rpx;
   background-color: #F1380D;
}
