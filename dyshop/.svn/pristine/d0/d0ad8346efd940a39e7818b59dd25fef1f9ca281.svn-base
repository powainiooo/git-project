/* footer.wxss */
.foot{display: flex;background-color: #fff;border-top: 1rpx solid #e5e5e5;position: fixed;bottom: 0;left: 0;width: 100%;z-index: 99;}
.foot_li{flex: 1;text-align: center;line-height: 35rpx;font-size: 20rpx;padding:8rpx 0 4rpx;position: relative;}
.foot_li .img{width: 50rpx;height: 50rpx;display: block;margin:0 auto;}
.foot_li .langImg{width: 80rpx;height: 80rpx;display: block;margin: 0 auto;}
.langTxt{position: absolute;top:50%;left:50%;transform: translate(-50%, -50%);color: #fff;z-index: 5;font-size: 27rpx;}
.foot_li.active{color: #de3031;}
.foot_li .img1{display: block;}
.foot_li .img2{display: none;}
.foot_li.active .img1{display: none;}
.foot_li.active .img2{display: block;}
