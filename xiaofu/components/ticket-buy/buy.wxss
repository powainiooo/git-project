.buy-frame{ overflow: hidden; margin-bottom: 200rpx;}

.buy-frame .price{ font-size: 100rpx;font-family: 'Helve'; padding-bottom: 20rpx;color: #002aac; margin: 0 50rpx;}
.buy-frame .price .unit{ font-size: 33rpx; align-self: flex-end; margin-bottom: 30rpx; margin-left: 10rpx;}

.buy-frame .form-frame{ margin: 0 50rpx; border-top: 1rpx solid #c9c9c9; border-bottom: 2rpx solid #c9c9c9; padding-top: 50rpx; padding-bottom: 30rpx;}
.buy-frame .form-frame .input{ width: 400rpx; height: 55rpx; border: 2rpx solid #000; font-size: 30rpx; border-radius: 8rpx; padding:0 20rpx; box-sizing: border-box; margin-bottom: 20rpx;}

.buy-frame .footer{ width: 100%; height: 160rpx; display: flex; position: fixed; left: 0; bottom: 0;z-index: 110;box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.1);}
.buy-frame .footer-shaodow{ box-shadow: none; }
.buy-frame .footer .ticket-type,.buy-frame .footer .ticket-number{padding-bottom: 10rpx; display: flex; justify-content: center; align-items: center; font-size: 24rpx;background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-size: 22rpx 13rpx;}
.buy-frame .footer .ticket-type{ width: 35%; background-color: #ffffff;  background-position: 78% 70rpx;}
.buy-frame .footer .ticket-number{ width: 25%; background-color: #f5f5f5; font-size: 33rpx;  background-position: 78% 70rpx;align-items: stretch;}
.buy-frame .footer .ticket-number view{ width: 100rpx; height: 100%; display: flex; justify-content: center; align-items: center;}
.buy-frame .footer .ticket-number text{font-size: 24rpx;}
.buy-frame .footer .btn{ width: 40%; background-color: #002aac; padding-bottom: 10rpx; display: flex; justify-content: center; align-items: center; font-size: 34rpx; color: #fff;}
.buy-frame .footer .btn-disabled{ background-color: #b5b5b6;}

.buy-frame .ticket-type-list{ width: 100%; position: fixed; left: 0; bottom: 160rpx; box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.1); z-index: 100; background-color: #ffffff;}
.buy-frame .ticket-type-list view{ height: 100rpx; box-sizing: border-box; font-size: 24rpx; display: flex; justify-content: center; align-items: center; position: relative;}
.buy-frame .ticket-type-list view.disabled{ background-color: #b5b5b6; color: #ffffff;}
.buy-frame .ticket-type-list view::after{ content: ''; position: absolute; bottom: 0; left: 50rpx; right: 50rpx; height: 2rpx; background-color: #b5b5b6;}
.buy-frame .ticket-type-list view:last-child::after{ height: 0;}

.hint-section{ margin: 40rpx 50rpx; font-size: 24rpx; color: #888888; line-height: 1.5; }