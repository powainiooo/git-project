.guide { width: 100%; height: 100vh; position: fixed; top: 0; left: 0;}
.guide .cover { width: 100%; height: 100vh; background-color: rgba(0,0,0,0.7)}
.guide .step1 { width: 100%; height: 100vh; position: absolute; top: 0; left: 0;}
.guide .step1 .mascot1 { width: 140rpx; position: absolute; left: 20rpx; bottom: 100rpx;}
.guide .step1 .modal1 { width: 580rpx; position: absolute; left: 140rpx; bottom: 160rpx;}
.guide .step1 .content { width: 480rpx; font-size: 28rpx; color: #4f9aab; letter-spacing: 5rpx; line-height: 1.8; text-indent: 2em; position: absolute; left: 190rpx; bottom: 290rpx;}
.guide .step2 { width: 100%; height: 100vh; position: absolute; top: 0; left: 0;}
.guide .step2 .mascot2 { width: 140rpx; position: absolute; right: 0; top: 600rpx;}
.guide .step2 .modal2 { width: 620rpx; position: absolute; left: 30rpx; top: 300rpx; transform: scaleX(-1)}
.guide .step2 .content { width: 520rpx; font-size: 24rpx; color: #4f9aab; letter-spacing: 5rpx; line-height: 1.8; text-indent: 2em; position: absolute; left: 100rpx; top: 370rpx;}
.guide .step2 .content .btn { font-size: 24rpx; color: #f41905; text-align: right; margin-top: 10rpx; margin-right: 50rpx;}

.mascot-btn { position: fixed; top: 70%; right: -80rpx; transition: all 0.3s ease-out}
.mascot-btn .mascot-icon { width: 140rpx;}

.scan-container { width: 100%; height: 100vh; position: fixed; top: 0; left: 0; background-color: rgba(0,0,0,0.7); display: flex; justify-content: center; align-items: center; transition: all 0.3s ease-out;}
.scan-container .scan-frame{ width: 80%; position: relative;}
.scan-container .scan-frame .frame-img{ width: 100%;}
.scan-container .scan-frame .btn-img{ width: 240rpx; position: absolute; left: 180rpx; bottom: 30rpx;}
.scan-container .scan-frame .btn-close{ font-size: 28rpx; position: absolute; right: 20rpx; top: 20rpx; color: #2c8df4}

.modal-success .star-list { display: flex; margin: 70rpx 100rpx 20rpx 100rpx; justify-content: space-between;}
.modal-success .star-list .star-item { width: 90rpx; height: 90rpx; background: url(data:image/png;base64,) no-repeat; background-size: 100%; position: relative;}
.modal-success .star-list .star-item::after { content: ''; width: 100%; height: 100%; background: url(data:image/png;base64,) no-repeat; background-size: 100%; position: absolute; top: 0; left: 0; transform-origin: 50% 40%; transform: scale(0)}
.modal-success .star-list .star-item-move::after { animation: star 0.2s linear both;}
.modal-success .star-list .star-item-move:nth-child(2)::after { animation-delay: 0.2s}
.modal-success .star-list .star-item-move:nth-child(3)::after { animation-delay: 0.4s}
.modal-success .star-list .star-item-move:nth-child(4)::after { animation-delay: 0.6s}
.modal-success .star-list .star-item-move:nth-child(5)::after { animation-delay: 0.8s}
@keyframes star {
    0% { opacity: 0; transform: scale(2);}
    10% { opacity: 1; transform: scale(2);}
    100% { opacity: 1; transform: scale(1);}
}
.modal-success .txt1 { text-align: center; font-size: 32rpx; font-weight: bold; color: #28a4af; letter-spacing: 2rpx; margin-bottom: 10rpx;}
.modal-success .txt2 { text-align: center; font-size: 24rpx; color: #8f8f8f; letter-spacing: 4rpx; margin-bottom: 50rpx;}
.modal-success .btns { display: flex; justify-content: space-between; margin: 40rpx 50rpx; }
.modal-success .btns .btn-item{ width: 240rpx;}

.modal-fail { display: flex; flex-direction: column; align-items: center;}
.modal-fail .fail-icon { margin: 50rpx 0 10rpx 0;}
.modal-fail .txt { font-size: 32rpx; color: #28a4af; margin-top: -24rpx; line-height: 1.8;}
.modal-fail .btn-item { width: 240rpx; margin: 40rpx 0;}