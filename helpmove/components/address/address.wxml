<view class="address-container">
   <view class="address-selected">{{selected}}</view>
   <scroll-view class="address-list" scroll-x>
      <view class="list-frame" style="width: {{130 * list.length}}rpx">
         <view class="address-list-item" wx:if="{{selected !== '全部'}}">全部</view>
         <view class="address-list-item"
               wx:if="{{selected !== item}}"
               wx:for="{{list}}"
               wx:foritem="item"
               wx:key="{{item}}"
               data-item="{{item}}"
               bindtap="doChange">{{item}}</view>
      </view>
   </scroll-view>
</view>
