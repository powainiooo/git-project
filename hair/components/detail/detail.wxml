<view class="detail-frame" style="top:{{showDetails ? '0' : '100vh'}}">
    <view class="line1">
        <view class="icons icon-guanbi" bindtap="hideDetails"></view>
        <view class="title1"><text>{{prodata.english_name}}\n{{prodata.china_name}}</text></view>
        <view class="title2">{{prodata.intro}}</view>
        <image src="{{imgSrc+prodata.cover_two}}" mode="scaleToFill" class="img"></image>
    </view>
    <view class="line2">
        <view class="decs"><text>适用于\n{{prodata.apply}}</text></view>
        <view class="icons icon-logo"></view>
    </view>
</view>