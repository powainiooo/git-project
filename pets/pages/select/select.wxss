.container-selection{ margin-top: 290rpx;}
.type-item { width: 660rpx; height: 332rpx; margin: 66rpx auto; border-radius: 20rpx; position: relative; background-color: #ddd9d8;}
.type-item-select { background-color: #dac49f; box-shadow: 0 10px 20px 0 rgba(0,0,0,0.12);}
.type-item .img { width: 100%; height: 100%;}
.type-item .logo { width: 30rpx; position: absolute; bottom: 28rpx; left: 40rpx;}
.type-item .name { font-size: 34rpx; position: absolute; top: 20rpx; left: 34rpx; display: flex; align-items: baseline;}
.type-item .name text { font-size: 66rpx; font-family: 'Helve'; margin-right: 12rpx;}
