<!-- 顶部导航 -->
<view class="header {{showShadow ? 'header-shadow' : ''}}">
  <view class="opera-line">
    <image src='../../res/images/logo1.png' mode="widthFix" class="logo" bindtap='gotoHome'></image>
    <view class="btns">
      <view class="icons icon-gengduo" wx:if="{{showMenu}}" bindtap="openMenu"></view>
      <view class="icons icon-guanbi" wx:if="{{showClose}}" bindtap="doClose"></view>
      <view class="icons icon-sousuo" wx:if="{{showSearch}}" data-val="{{false}}" bindtap="toggleSearch"></view>
      <view class="icons icon-fenxiang" wx:if="{{showShare}}"  data-val="{{true}}" bindtap="toggleShare"></view>
    </view>
  </view>
  <view class='search-frame' style="top:{{showSearchFrame ? '120rpx' : '0rpx'}}" animation="{{searchAniData}}">
    <input type='text'
           placeholder='输入活动名称/主办方名称'
           class='text'
           bindinput="bindKeyInput"
           bindfocus="doShowCover"
           bindblur="doHideCover"
           value="{{keywords}}"></input>
    <view class='btn' bindtap='doSearch'><view class="icons icon-sousuo"></view></view>
    <view class='btn' data-val="{{true}}" bindtap="toggleSearch"><view class="icons icon-guanbi"></view></view>
  </view>
</view>

<!-- 更多菜单 -->
<view class='nav-frame' animation="{{navAniData}}">
  <view class='person-info'>
    <image src="{{userInfo.avatarUrl}}" class="avatar"></image>
    <text class='name'>{{userInfo.nickName}}</text>
  </view>
  <view class='nav-list'>
    <navigator wx:for="{{navList}}" wx:for-index="idx" wx:for-item="item" wx:key="{{idx}}" url="{{item.url}}" class='nav-item' hover-class='none'>
      <text class='name'>{{item.name}} | {{item.nameEn}}</text>
    </navigator>
  </view>
</view>

<!-- 订单中心 -->
<view class='nav-order' animation="{{orderAniData}}">
  <image mode='widthFix' src='../../res/images/menu-line.png' class='menu-line'></image>
  <navigator class='link' url="/pages/order-ticket/order" hover-class="none">
    <image mode='widthFix' src='../../res/images/menu-order.png' class='menu-title'></image>
  </navigator>
</view>

<!--黑色遮罩-->
<view class="bg-cover" wx:if="{{showCover}}"></view>

<!--分享-->
<view class="share-frame" animation="{{shareAnimate}}">
  <view class="line1">
    <text>分享</text>
    <view class="icons icon-guanbi" data-val="{{false}}" bindtap="toggleShare"></view>
  </view>
  <view class="line2">
    <button class="btn-share" plain open-type="share">
      <text>转发给好友</text>
    </button>
    <button class="btn-poster" plain bindtap="drawPoster">
      <text>生成分享海报</text>
    </button>
  </view>
</view>