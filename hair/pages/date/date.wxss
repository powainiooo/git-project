.container-date{ margin-top: 460rpx;}
.date-list{ width: 100%; height: 160rpx; background-color: #ffffff; border-bottom: 1rpx solid #e8e3e0; box-shadow: 0 2px 6px rgba(0,0,0,0.1); z-index: 100; display: flex; position: fixed; top: 300rpx; left: 0;}
.date-list .item{ width: 20%; height: 100%; box-sizing: border-box; display: flex; flex-direction: column; justify-content: center; align-items: center; border-right: 1rpx solid #e8e3e0;}
.date-list .item:last-child{ border-right: none;}
.date-list .item .day{ font-size: 66rpx; text-shadow: 0 0 3px rgba(55,44,30,0.25); font-family: 'Helve';}
.date-list .item .week{ font-size: 30rpx;}
.date-list .active{ background-color: #d9c39f; color: #ffffff}
.date-list .disabled{ color: #e6e2df}
.date-list .disabled .day{ text-shadow: none;}

.time-item{ width: 100%; height: 230rpx; border-bottom: 1rpx solid #e5e4e0; padding: 0 60rpx; box-sizing: border-box; display: flex; justify-content: space-between; align-items: center; font-size: 70rpx; color: #e7e3e2; position: relative;transition:transform 0.15s ease-out;}
.time-item-hover{ transform: scale(0.95);}
.time-item .icon-xuanzhong{ position: absolute; top: 75rpx; left: 85rpx; font-size: 60rpx; color: #372c1e; display: none;}
.time-item-selected{ background-color: #d9c39f; color: #ffffff;}
.time-item .time{ font-size: 160rpx; font-family: 'Helve'; color: #372c1e; text-shadow: 0 0 3px rgba(55,44,30,0.25);}
.time-item .end{ font-size: 30rpx; font-family: 'Helve'; color: #ffffff; letter-spacing: 5rpx; text-align: center; margin-top: -20rpx;}
.time-item-selected .time{ color: #ffffff;}
.time-item-selected .icon-xuanzhong{ display: block;}
.time-item-disabled{ color: #e4e3df;}
.time-item-disabled .time{ color: #e4e3df; text-shadow: none;}
.time-item-disabled .hint{ font-size: 30rpx;}