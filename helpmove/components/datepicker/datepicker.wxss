.datepicker .date-week { margin: 0 40rpx 6rpx 40rpx; display: flex; justify-content: space-between;}
.datepicker .date-week .date-week-item { width: 84rpx; height: 70rpx; display: flex; justify-content: center; align-items: center; font-size: 30rpx; color: rgba(255, 255, 255, 0.5)}

.datepicker .date-days { margin: 0 40rpx 120rpx 40rpx; display: flex; justify-content: space-between; flex-wrap: wrap;}
.datepicker .date-days .date-days-item { width: 84rpx; height: 84rpx; box-sizing: border-box; border-radius: 50%; margin-bottom: 15rpx; border: 4rpx solid rgba(255, 255, 255, 0.5); font-size: 32rpx; display: flex; justify-content: center; align-items: center; color: rgba(255, 255, 255, 0.5); font-family: 'Helve';}
.datepicker .date-days .date-days-item-light { color: #ffffff; border-color: #ffffff;}
.datepicker .date-days .date-days-item-active { color: #0129ac; border-color: #ffffff; background-color: #ffffff;}

.datepicker .btn-confirm { width: 530rpx; height: 80rpx; background-color: #ffffff; border-radius: 40rpx; font-size: 32rpx; color: #0129ac; margin: 0 auto 100rpx auto; display: flex; justify-content: center; align-items: center; box-shadow: 0 2rpx 3rpx rgba(0, 0, 0, 0.2);}
.datepicker .btn-confirm-disabled { background-color: #cacaca; color: #717171;}
