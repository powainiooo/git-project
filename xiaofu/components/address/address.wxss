.address-container { width: 100%; height: 100rpx; transition: background-color 0.2s ease-out;}
.address-container-bg { background-color: #002bb0;}
.address-container .address-selected { width: 210rpx; height: 100%; display: flex; justify-content: center; align-items: center; font-size: 44rpx; color: #000000; position: absolute; top: 0; left: 0; background-color: #f3f3f3; z-index: 10;}
.address-container-bg .address-selected { color: #ffffff; background-color: #002bb0;}
.address-container .address-selected::after { content: ''; width: 0; border: 8rpx solid rgba(0, 0, 0, 0); border-left-color: #002ab0; margin-left: 10rpx; border-left-width: 14rpx; opacity: 0}
.address-container-bg .address-selected::after { border-left-color: #ffffff;}
.address-container .address-selected-arrow::after { opacity: 1}
.address-container .address-list { width: 550rpx; height: 100%; margin-left: 200rpx; transform-origin: 0 center; transition: all 0.3s ease-out;}
.address-container .address-list-fold { transform: translate(-750rpx, 0); opacity: 0;}
.address-container .address-list .list-frame { height: 100%; display: flex;}
.address-container .address-list .address-list-item { width: 120rpx; box-sizing: border-box; padding-left: 8rpx; height: 100%; display: flex; align-items: center; font-size: 28rpx; color: #b5b5b6; margin-right: 10rpx;}
.address-container-bg .address-list .address-list-item { color: #0092df}
