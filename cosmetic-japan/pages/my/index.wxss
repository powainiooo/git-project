/* pages/my/index.wxss */
@import "../template/template.wxss";
.center_copy{width:100%;height:50px;text-align:center;margin-bottom:10px;}
.item{background-color: #fff;}
.toMgt16{margin-top: 16rpx;}
.noborder{border:0!important;}
.myPinduan{
   padding:0 30rpx 20rpx 30rpx;
   position: relative;
}
.myPinduanItem{
   display:flex;
   align-items:center;
   font-size:34rpx;
   color:#333333;
   background:rgba(254,248,248,1);
   padding: 8rpx 10rpx;
   border-bottom:1rpx solid #e5e5e5;
}
.pdImg{
   width: 86rpx;
   height: 86rpx;
   margin-left: 10rpx;
   margin-right: 20rpx;
}
.pdTitle{
   display: inline-block;
   width: 370rpx;
}
.pdTime{
   display: inline-block;
   color: #E60012;
   margin-left: 10rpx;
   margin-right: 65rpx;
}
.inviteButton{
   padding-left: 10rpx;
   padding-right: 10rpx;
   height:60rpx;
   background:rgba(230,0,18,1);
   border-radius:4rpx;
   color: #fff;
   line-height: 60rpx;
   text-align: center;
   font-size: 30rpx;
}
.small{
   width: 0;
   height: 0;
   border-left: 20rpx solid transparent;
   border-right: 20rpx solid transparent;
   border-bottom: 20rpx solid rgba(254,248,248,1);
   position:absolute;
   top:-14rpx;
   left:100rpx;
}
.showAll{
   display:flex;
   align-items:center;
   font-size:26rpx;
   color:#999;
   background:rgba(254,248,248,1);
   padding: 30rpx;
   justify-content: center;
}
button::after{
   border: 0!important;
}

.show-btn {
   margin-top: 100rpx;
   color: #22cc22;
}

.modal-mask {
   width: 100%;
   height: 100%;
   position: fixed;
   top: 0;
   left: 0;
   background: #000;
   opacity: 0.5;
   overflow: hidden;
   z-index: 9000;
   color: #fff;
}

.modal-dialog {
   width: 540rpx;
   overflow: hidden;
   position: fixed;
   top: 50%;
   left: 0;
   z-index: 9999;
   background: #f9f9f9;
   margin: -180rpx 105rpx;
   border-radius: 20rpx;
}

.modal-title {
   padding-top: 50rpx;
   font-size: 36rpx;
   color: #030303;
   text-align: center;
}

.modal-content {
   padding: 50rpx 32rpx;
}

.modal-input {
   display: flex;
   background: #fff;
   border: 2rpx solid #ddd;
   border-radius: 4rpx;
   font-size: 28rpx;
}


.input {
   width: 100%;
   height: 82rpx;
   font-size: 28rpx;
   line-height: 28rpx;
   padding: 0 20rpx;
   box-sizing: border-box;
   color: #333;
}

input-holder {
   color: #666;
   font-size: 28rpx;
}

.modal-footer {
   display: flex;
   flex-direction: row;
   height: 86rpx;
   border-top: 1px solid #dedede;
   font-size: 34rpx;
   line-height: 86rpx;
}

.btn-cancel {
   width: 50%;
   color: #666;
   text-align: center;
   border-right: 1px solid #dedede;
}

.btn-confirm {
   width: 50%;
   color: #ec5300;
   text-align: center;
}

.my-bg {
   width: 100%;
   height: 338rpx;
}

.my-nav {
   width: 660rpx;
   height: 166rpx;
   background: #FFFFFF;
   box-shadow: 0 0 18rpx 1px rgba(15, 21, 69, 0.04);
   border-radius: 32rpx;
   margin: -83rpx auto 10rpx auto;
   position: relative;
   z-index: 10;
}
.my-nav-item {
   display: flex;
   flex-direction: column;
   align-items: center;
}
.my-nav-item image {
   width: 56rpx;
   height: 56rpx;
   margin-bottom: 20rpx;
}
.my-nav-item view {
   font-size: 22rpx;
   color: #4A4D4F;
}

.my-button {
   width: 83rpx;
   height: 75rpx;
   position: fixed;
   bottom: 230rpx;
   right: 34rpx;
}
.my-button image:first-child {
   width: 100%;
   height: 100%;
}
.my-button image:last-child {
   width: 35rpx;
   height: 35rpx;
   position: absolute;
   top: 16rpx;
   left: 24rpx;
}
