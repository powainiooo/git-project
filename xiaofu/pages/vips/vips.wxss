.blue { height: 250rpx; background-color: #002bb0; margin-top: 120rpx;}
.card { width: 650rpx; position: fixed; top: 140rpx; left: 50rpx; z-index: 100;}
.card image { width: 100%; display: block;}
.card .date { font-size: 20rpx; color: rgba(255, 255, 255, 0.7); position: absolute; bottom: 110rpx; right: 40rpx;}
.card .shadow { width: 718rpx; height: 472rpx; position: absolute; top: -42rpx; left: -34rpx;}

.vip-footer { width: 100%; height: 160rpx; background-color: #fff; display: flex; box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.1); position: fixed; bottom: 0; left: 0; z-index: 100;}
.vip-footer .price { width: 64%; font-size: 100rpx;font-family: 'Helve'; padding-bottom: 20rpx; display: flex; justify-content: center; align-items: center; color: #002aac;}
.vip-footer .price .unit { font-size: 33rpx; align-self: flex-end; margin-bottom: 30rpx; margin-left: 10rpx;}
.vip-footer .btn { width: 36%; font-size: 34rpx; color: #ffffff; background-color: #002aac; padding-bottom: 20rpx; display: flex; justify-content: center; align-items: center;}
.vip-footer .btn-hover { background-color: #0212a3}
.vip-footer .btn-diabled { background-color: rgb(181,181,182);}

.vips-frame { height: calc(100vh - 530rpx); background-color: #f3f3f3; width: 100%; box-sizing: border-box;}
.vips-confirm { position: fixed; left: 0; bottom: -700rpx; background-color: rgba(243, 243, 243, 0.97); transition: bottom 0.4s cubic-bezier(.22,.62,.37,1);}
.vips-confirm-show { bottom: 150rpx;}

.power-item { width: 580rpx; margin: 0 auto 60rpx auto; display: flex; align-items: center; justify-content: space-between;}
.power-item image { width: 54rpx;}
.power-item view { width: 480rpx; font-size: 24rpx; color: #969696; line-height: 1.8;}

.info-content { width: 580rpx; margin: 60rpx auto;}
.info-content .title { font-size: 24rpx; color: #969696; margin: 0 0 26rpx 20rpx;}
.info-content .input-line { display: flex; justify-content: space-between; margin-bottom: 20rpx;}
.info-content .input-line .input{ width: 280rpx; height: 55rpx; border: 2rpx solid #000; font-size: 24rpx; border-radius: 8rpx; padding:0 20rpx; box-sizing: border-box;}
.info-content .input-line .input[disabled] { background-color: #e5e3e4; border-color: #e5e3e4;}

.vip-hint { width: 540rpx; border-top: 1px solid #969696; margin-left: auto; margin-right: auto; padding: 60rpx 20rpx;}
