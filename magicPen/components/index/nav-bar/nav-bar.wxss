.nav-bar { width: 100%; height: 200rpx; background-color: #ffffff; display: flex; justify-content: space-around; align-items: center;}
.nav-bar .nav-bar-item { width: 100rpx; text-align: center; position: relative;}
.nav-bar .nav-bar-item .nav-bar-icon{ width: 100rpx; height: 100rpx;}
.nav-bar .nav-bar-item .nav-bar-name{ font-size: 24rpx; color: #000000; text-align: center;}
.nav-bar-item-dot::after { content: ''; width: 14rpx; height: 14rpx; background-color: #ff3067; border-radius: 50%; position: absolute; top: -6rpx; right: -6rpx;}