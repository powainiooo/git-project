.call-title { width: 370rpx; margin: 15rpx auto 30rpx auto;}
.call-title .dot { width: 10rpx; height: 10rpx; border-radius: 50%; background-color: #ffffff; margin: 0 30rpx;}
.call-desc { width: 100%; font-size: 26rpx; color: #279e88; text-align: center; margin-top: 20rpx; line-height: 1.8; letter-spacing: 4rpx;}

.coin-line { height: 80rpx; background-color: #eff2f9; padding: 0 60rpx; display: flex; align-items: center; justify-content: space-between; margin-top: 40rpx;}
.coin-line .mine { font-size: 26rpx; color: #279e88; display: flex; align-items: center;}
.coin-line .cost { font-size: 26rpx; color: #ff306a; display: flex; align-items: center;}
.coin-line .icon-pea { width: 50rpx; margin-top: 16rpx;}

.photo-recharge { width: 240rpx; display: flex; justify-content: flex-end; align-items: center; font-size: 26rpx; color: #ff306a;}
.photo-recharge .icon-pea { width: 60rpx; margin-top: 16rpx; margin-right: 10rpx;}

.call-works-title { background-color: #ffffff; font-size: 22rpx; color: #a1aaac; margin-top: 0}

.call-works-list { padding: 23rpx; background-color: #eff2f9; display: flex; flex-wrap: wrap;}
.call-works-hint { width: 100%; font-size: 32rpx; text-align: center; margin: 40rpx 0; color: #a1aaac;}
.call-works-item { width: 222rpx; box-sizing: border-box; background-color: #ffffff; border: 4rpx solid #ffffff; position: relative; margin:0 7rpx 28rpx 7rpx;}
.call-works-item-check { border-color: #ff306a}
.call-works-item .picture { width: 100%; height: 150rpx; overflow: hidden;}
.call-works-item .picture .picture-img {  width: 100%; height: 100%; transform: scale(1.6)}
.call-works-item .name { height: 40rpx; color: #a1aaac; font-size: 22rpx; display: flex; justify-content: center; align-items: center; position: relative;}
.call-works-item .name::before { content: ''; height: 2rpx; position: absolute; left: 30rpx; right: 30rpx; top: 0; background-color: #f4f4f4; }
.call-works-item .check { position: absolute; bottom: 0rpx; right: 5rpx; display: none;}
.call-works-item-check .check { display: block;}


.modal-content .txt1 { font-size: 32rpx; color: #30aac2; text-align: center; padding: 60rpx 50rpx;}
.modal-content .btn { width: 240rpx; margin: 0 auto 50rpx auto;}
.modal-content .btn .pea{ width: 50rpx; margin-top: 20rpx; margin-left: 15rpx;}

.success-frame { width: 100%; height: 100vh; position: fixed; top: 0; left: 0; z-index: 100; background-color: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; flex-direction: column; animation: frame 1s linear both;}
@keyframes frame {
   0%{ opacity: 0;}
   100%{ opacity: 1;}
}
.success-frame .images { width: 500rpx; position: relative; animation: scaleIn 0.5s ease-out 1s both;}
@keyframes scaleIn {
   0% { transform: scale(0)}
   100% { transform: scale(1)}
}
.success-frame .images .in { width: 350rpx; margin-left: 75rpx;}
.success-frame .images .light { width: 650rpx; height: 650rpx; position: absolute; top: -75rpx; left: -75rpx; animation: light 10s linear infinite; z-index: -1}
@keyframes light {
   0% { transform: rotateZ(360deg); opacity: 0;}
   25%, 75% { opacity: 1;}
   50% { opacity: 0;}
   100% { transform: rotateZ(0deg); opacity: 1}
}
.success-frame .content { width: 490rpx; animation: content 0.5s ease-out 2s both; margin-top: 40rpx;}
@keyframes content {
   0% { transform: translate(0, 100rpx); opacity: 0;}
   100% { transform: translate(0, 0); opacity: 1;}
}