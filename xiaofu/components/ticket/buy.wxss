.buy-frame{ overflow: hidden; margin-bottom: 160rpx;}

.buy-frame .price{ font-size: 100rpx; line-height:1; font-family: 'Helve'; padding-bottom: 10rpx; padding-top:20rpx;color: #002aac; margin: 0 50rpx;}
.buy-frame .price .unit{ font-size: 33rpx; align-self: flex-end; margin-bottom: 30rpx; margin-left: 10rpx;}

.buy-frame .form-frame{ margin: 0 50rpx; border-top: 1rpx solid #c9c9c9; border-bottom: 2rpx solid #c9c9c9; padding-top: 50rpx; padding-bottom: 30rpx; position: relative;}
.buy-frame .form-frame .input{ width: 400rpx; height: 55rpx; border: 2rpx solid #000; font-size: 30rpx; border-radius: 8rpx; padding:0 20rpx; box-sizing: border-box; margin-bottom: 20rpx;}
.buy-frame .form-frame .input .id-item{ height: 52rpx; display: flex; align-items: center; position: relative;}
.buy-frame .form-frame .input .id-item:after{ content: ''; width: 10rpx; height: 10rpx; border-left: 2rpx solid #000; border-bottom: 2rpx solid #000; position: absolute; top: 16rpx; right: 0; transform: rotateZ(-45deg);}
.buy-frame .form-frame .input .id-item-placeholder{ color: rgb(128,128,128);}
.upload-frame { width: 230rpx; border: 2rpx solid #000; position: absolute; right: 0; top: 50rpx; bottom: 50rpx; border-radius: 8rpx; display: flex; justify-content: center; align-items: center;}
.upload-frame .name { font-size: 24rpx; color: #989898; position: absolute; top: 10rpx; left: 10rpx; }
.upload-frame .btn-add { width: 80rpx;}
.upload-frame .btn-edit { width: 80rpx; position: absolute; top: 10rpx; right: 10rpx;}
.upload-frame .photos { width: 100%; height: 100%; border-radius: 8rpx;}

.buy-frame .ticket-type-list{ width: 100%; max-height: 500rpx; overflow-y: scroll; position: fixed; left: 0; bottom: 160rpx; box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.1); z-index: 100; background-color: #ffffff;  transition: bottom 0.3s cubic-bezier(.22,.62,.37,1);}
.buy-frame .ticket-type-list view{ height: 100rpx; box-sizing: border-box; font-size: 24rpx; display: flex; justify-content: center; align-items: center; position: relative;}
.buy-frame .ticket-type-list view.disabled{ background-color: #b5b5b6; color: #ffffff;}
.buy-frame .ticket-type-list view::after{ content: ''; position: absolute; bottom: 0; left: 50rpx; right: 50rpx; height: 2rpx; background-color: #f0f0f0;}
.buy-frame .ticket-type-list view:last-child::after{ height: 0;}

.hint-section{ margin: 40rpx 50rpx; font-size: 24rpx; color: #888888; line-height: 1.5; }

.ticket-list{ padding-top: 40rpx; border-top: 1rpx solid #c9c9c9; overflow: hidden; margin: 0 50rpx; position: relative; z-index: 100;}
.ticket-list .ticket-item{ font-size: 28rpx; padding: 16rpx 36rpx; background-color: #ffffff; border-radius: 8rpx; box-shadow: 4rpx 8rpx 12rpx rgba(0,0,0,0.08); margin: 0 30rpx 40rpx 0; float: left; text-align: center; box-sizing: border-box;}
.ticket-list .disabled{ box-shadow: none; background-color: #c7c8c9; color: #ffffff;}
.ticket-list .selected{ box-shadow: 4rpx 8rpx 12rpx rgba(0,42,172,0.5); background-color: #002aac; color: #ffffff;}

.passport-example { width: 100%; background-color: rgba(244,244,244,0.98); display: flex; flex-direction: column; justify-content: center; position: relative;}
.passport-example .img { width: 500rpx; margin: 100rpx 0 0 125rpx;}
.passport-example .hint { margin: 0 50rpx 160rpx 50rpx; border-top: 2rpx solid #c7c7c7; color: #868686; font-size: 24rpx; padding: 50rpx 0;}
.passport-example .btn-close { width: 46rpx; position: absolute; top: 50rpx; right: 50rpx;}
