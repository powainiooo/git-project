.vip-frame { height: 450rpx; margin-top: 160rpx;}
.vip-item { width: 650rpx; text-align: center; margin: 0 15rpx; position: relative;}
.vip-item .img { width: 100%; height: 384rpx; transition: transform 0.15s cubic-bezier(.18,.47,.31,.96); position: relative; z-index: 5;}
.vip-item .shadow { width: 718rpx; height: 472rpx; position: absolute; top: -42rpx; left: -34rpx;}
.vip-item .img-tap { transform: scale(0.95)}
.vip-item .img image { width: 100%; display: block;}
.vip-item .tips { color: #898989; font-size: 24rpx; text-align: center; margin-top: 30rpx;}
