/* pages/cart/class.wxss */
@import "../template/template.wxss";

.cart-header {
   width: 100%;
   height: 80rpx;
   background-color: #ffffff;
   margin-bottom: 20rpx;
}
.cart-header view {
   margin-left: 40rpx;
   font-size: 32rpx;
   color: #272727;
}
.cart-header view image {
   width: 30rpx;
   height: 30rpx;
   margin-right: 15rpx;
}
.cart-header button {
   width: 140rpx;
   height: 60rpx;
   font-size: 32rpx;
   color: #272727;
   border: 3rpx solid rgb(153, 153, 153);
   border-radius: 30rpx;
   margin-right: 34rpx;
}
