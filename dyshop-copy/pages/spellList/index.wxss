/* pages/spellList/index.wxss */

.list-group {
    padding: 34rpx 32rpx;
}

.content {
    display: flex;
    border-bottom: 1rpx solid #EEEEEE;
}

.img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.list-right {
    margin-bottom: 42rpx;
    font-size: 28rpx;
}

.title {
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    width: 470rpx;
    margin-bottom: 22rpx;
}

.active {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 18rpx;
    margin-bottom: 30rpx;
    width: 411rpx;
    height: 34rpx;
    background: #FFEAED;
    border-radius: 4rpx;
    color: #333;
}

.active-time {
    color: #E60012;
    font-size: 24rpx;
}

.list-footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.list-price {
    display: flex;
    align-items: flex-end;
}

.price {
    color: #DE3031;
    font-size: 20rpx;
    margin-right: 10rpx;
}

.now-price {
    font-size: 32rpx;
    font-family: HiraginoSansGB-W6;
    font-weight: normal;
}

.num {
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: #EB3349;
    background-color: #FFEAED;
    padding: 5rpx 8rpx;
}

.old-price {
    text-decoration: line-through;
    color: #999;
    font-size: 24rpx;
}

.list-button {
    background-color: #DE3031;
    color: #fff;
    font-size: 34rpx;
    border-radius: 4rpx;
    width: 166rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.spell-people {
    margin-left: 10rpx;
    padding: 5rpx 14rpx;
    border: 1rpx solid #E60012;
    border-radius: 4rpx;
    color: #E60012;
    font-size: 24rpx;
}

.middle {
    display: flex;
    justify-content: space-between;
    height:60rpx;
}

.spell-time {
    font-size: 20rpx;
    font-weight: 500;
    /* width: 160rpx; */
}
.spell-time-out {
    color: #E60012;
}
.is-over {
    text-align: center;
    font-size: 24rpx;
    margin-bottom: 20rpx;
    color: #999;
}
.detail-btn {
    width: 750rpx;
    height: 98rpx;
    line-height: 98rpx;
    position: fixed;
    bottom: 0;
    background-color: #DE3031;
    color: #fff;
    text-align: center;
    font-size: 34rpx;
}