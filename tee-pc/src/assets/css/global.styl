@import "mixin.styl"

// 变量
mainColor = #F0916C

body
  background linear-gradient(349deg, #F9F6F2 0%, #F0E7DD 50%, #EADED0 100%)

.scrollBar
  &::-webkit-scrollbar
    width 2px
    background-color transparent
  &::-webkit-scrollbar-thumb
    background-color mainColor

.acenter
  acenter()
.center
  center()
.between
  between()
.around
  around()
.end
  end()

// 动效
.ts1
  transition all .4s cubic-bezier(.23,.78,.33,.97)

// 盒子样式
.box
  background: #F9F9F9; box-shadow: 0px 3px 20px 0px rgba(0, 0, 0, 0.08); border-radius: 50px 50px 0px 0px; position relative;
.box2
  background: #ffffff; box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.08); border-radius: 50px; position relative;
  &:before
    content ''; size(100%, 70px); background-color #F4F3F3; abTL(0, 0); z-index 0; border-radius: 50px 50px 0px 0px;
  &-title
    font-size 18px; height 70px; padding-top 22px; padding-left 30px; position relative;
  &-body
    height calc(100% - 120px); overflow-y auto;

// 标签页
.tee-tabs
  &.ivu-tabs-card>.ivu-tabs-bar
    border-bottom none; margin-bottom 0;
    .ivu-tabs-nav-container
      height 57px; padding-top 7px;
    .ivu-tabs-tab
      size(160px, 50px); padding 0; margin-right 20px; text-align center; line-height 50px; border-radius 25px 25px 0 0; border none; background-color #EDECEB; font-size 18px; color #B9BABB;
    .ivu-tabs-tab-active
      background-color #ffffff; color mainColor; box-shadow 0px 0px 7px 0px rgba(0, 0, 0, 0.08);
  .ivu-tabs-nav-scroll
    margin-left 20px; overflow visible;

// 表单
.c-form
  width 250px; margin-left auto; margin-right auto;
  .ivu-form-item
    margin-bottom 20px
  .ivu-form-item-error-tip
    font-size 12px; left 16px; margin-top -2px;
  .form-hint
    font-size 12px; color #C8C9CA; margin-left 15px; margin-right 15px; line-height 15px; margin-top 4px;
// 输入框
.ivu-input
  border none; background-color #FFFFFF; height 40px; color #41372D; border-radius 20px; padding 4px 15px;
.c-input
  size(250px, 40px); acenter(); border-radius 20px; background-color #ffffff; border: 1px solid #F2F2F2;
  &-search
    margin 0 10px;
  input[type=text]
    flex 1; border none; height 100%; font-size 12px; color #3E311F;
.min-txt
  .ivu-input-word-count
    border-radius 0 5px 5px 0;
  .ivu-input
    height 35px; border 1px solid #E2E2E2;
    &[disabled]
      border none
.ivu-input-group-append
  background-color #FFFFFF; border none; border-radius 0 20px 20px 0; font-size 12px; color #C8C9CA; padding-right 15px;
.ivu-input-group-prepend
  width 65px; background-color #E8D1B9; border-radius 20px 0 0 20px; border none; padding 0; text-align center; font-size 12px; color #FFFFFF;
.ivu-input-wrapper
  .ivu-input-word-count
    color #C8C9CA; right 10px;

.ivu-input-wrapper-disabled
  .ivu-input-group-append
    background-color #f3f3f3
// 按钮
.ivu-btn
  min-width 100px; height 40px; background-color mainColor; color #FAFAFA; border-radius 20px; border-color mainColor; transition all .2s ease-in-out;
  &:hover
    background-color #FFBA9F; color #FAFAFA; border-color mainColor; box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.15);
  &[disabled]
    border none; background #EDECEB; color #B9BABB;
  &[disabled]:hover
    background #EDECEB; color  #B9BABB;
.ivu-btn-small
  min-width auto; height 26px; line-height 22px; background-color #ffffff; box-shadow 0px 0px 3px 0px rgba(0, 0, 0, 0.15); border-color #ffffff; color #9E9E9F; font-size 12px; padding 0 9px;
  &:hover
    background-color #ffffff; color #9E9E9F; border-color #ffffff;
  &.bg-main
    background-color mainColor; color #ffffff; border-color mainColor;
  &.bg-gray
    background-color #A96854; color #ffffff; border-color #A96854;
  &.bg-error
    background-color #F24C25; color #ffffff; border-color #F24C25;

.btn-close
  size(40px, 40px); background-color #EDECEB; box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.15); border-radius 50%; center();
  img
    width 35%; display block;

.btn-circle
  size(25px, 25px); background-color #ffffff; box-shadow 0px 0px 3px 0px rgba(0, 0, 0, 0.15); border-radius 50%; center();
  img
    display block
.btn-warn
  size(16px, 16px); background-color #F24C25; box-shadow 0px 0px 3px 0px rgba(0, 0, 0, 0.15); border-radius 50%; center(); font-size 12px; color #ffffff; line-height 12px;
.btn-geo
  height 20px; line-height 20px; font-size 12px; color #ffffff; background-color mainColor; border-radius 3px; padding 0 6px; abBR(8px, 8px);
  &:hover
    color #ffffff; opacity .5;

.bg-main
  background-color mainColor
.warn-pop
  .ivu-poptip-popper[x-placement^=right] .ivu-poptip-arrow:after
    border-right-color #F24C25
  .ivu-poptip-inner
    background-color #F24C25
  .ivu-poptip-body
    padding 2px 6px;
  .ivu-poptip-body-content-inner
    color #ffffff; font-size 12px;

// 下拉框
.ivu-select-single
  .ivu-select-selection
    height 40px; border none; border-radius 20px
    .ivu-select-placeholder
      height 40px; line-height 40px; color #C8C9CA; padding-left 15px
    .ivu-select-arrow
      color #ffffff; z-index 5; right 14px
    .ivu-select-selected-value
      height 40px; line-height 40px; color #3E311F; padding-left 15px
    &:after
      content ''; size(20px, 20px); line-height 40px; abBR(10px, 11px); background-color mainColor; border-radius 20px; color rgba(255, 255, 255, .5)
.c-select
  .ivu-select-selection
    background-color #A96854
    .ivu-select-placeholder
      color #ffffff
    .ivu-select-selected-value
      color #ffffff
    &:after
      background-color transparent

.ivu-cascader-rel
  .ivu-cascader-arrow
    z-index 10; color #ffffff; right 14px;
  &:after
    content ''; size(40px, 40px); line-height 40px; abBR(0, 0); background-color mainColor; border-radius 0 20px 20px 0; color rgba(255, 255, 255, .5)

// 单选框
.cb
  -webkit-appearance none; size(16px, 16px); background url('data:image/png;base64,') no-repeat; background-size 100% 100%;
  &:checked
    background-image url('data:image/png;base64,')

// 表格
.tee-tables
  position relative;
  table
    width 100%
    thead
      th
        height 30px; color #C8C9CA; font-weight normal; font-size 14px; text-align left;
        &:first-child
          padding-left 30px
    tbody
      tr
        td
          vertical-align top
          &>div
            min-height 85px
            padding-top 20px
            padding-right 20px
            padding-bottom 10px
            font-size 14px
            color #9E9E9F
            word-break break-all
          &:first-child
            border-radius 20px 0 0 20px
            padding-left 30px
          &:last-child
            border-radius 0 20px 20px 0
            &>div
              border-radius 0 20px 20px 0
          .content
            overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;
      tr:nth-child(2n-1)
        td
          background-color #F4F3F3
.tee-tables-min
  table
    tbody
      tr
        td
          &>div
            min-height 50px; padding-top 0; acenter()
          &:first-child
            border-radius 12px 0 0 12px
          &:last-child
            border-radius 0 12px 12px 0
            &>div
              border-radius 0 12px 12px 0

// 布局
.operates-line
  padding 0 45px 20px 45px; border-bottom 1px solid #E2E2E2;
.img-box
  size(60px, 60px); border-radius 12px; overflow hidden; center()
  img
    width 100%; display block;
.img-box-height
  img
    size(auto, 100%)

// 标签
.c-tag
  height 25px; line-height 25px; border-radius 13px; font-size 12px; color #ffffff; padding 0 10px; background-color #F24C25; box-shadow 0px 0px 3px 0px rgba(0, 0, 0, 0.15);

// 分页
.tee-page
  .ivu-page-next, .ivu-page-prev
    background-color transparent

// 空提示
.empty
  text-align center; font-size 0;
  p
    font-size 24px; margin-top 20px; line-height 28px; color #CECBC6; margin-bottom 4px;
  div
    font-size 36px; line-height 36px; color #CECBC6;
