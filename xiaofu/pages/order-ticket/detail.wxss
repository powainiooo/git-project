.detail-frame{ width: 100%;overflow: visible; box-sizing: border-box; padding: 10rpx 0; margin-top: 200rpx; transition:height 0.5s cubic-bezier(.22,.62,.37,1);}
.details-show{ position: absolute;}
.detail-frame .swiper-item{ padding: 10rpx 20rpx 50rpx 20rpx; box-sizing: border-box; overflow: visible; transition:opacity 0.5s cubic-bezier(.22,.62,.37,1);}
.detail-frame .hide{ opacity: 0;}
.detail-frame .check-infos{ margin: -130rpx 90rpx 20rpx 90rpx; display: flex; justify-content: space-between;}
.detail-frame .check-infos view{ font-size: 28rpx;}
.detail-frame .check-infos view text{ font-size: 70rpx; font-family: 'Helve'; margin-left: 16rpx;}
.detail-frame .hint-section{ margin: 50rpx 90rpx; border-top: 1rpx solid #e2e2e2; padding-top: 50rpx;}
