.order-time{ background-color: #dac49f; padding: 0 40rpx;}
.order-time .line{ height: 110rpx; box-sizing: border-box; padding: 0 20rpx; display: flex; align-items: center;  justify-content: space-between;}
.order-time .line .month{ font-size: 60rpx; font-family: 'Helve';text-shadow: 0 0 3px rgba(55,44,30,0.25);}
.order-time .line .week { font-size: 24rpx; color: #ffffff; text-align: center;}

.store-item{ margin: 30rpx 60rpx; position: relative;}
.store-item .title{ width: 450rpx; font-size: 60rpx; text-shadow: 0 0 3px rgba(55,44,30,0.25); margin-bottom: 30rpx;}
.store-item .address{ width: 450rpx; font-size: 30rpx;}
.store-item .btn-map{ width: 140rpx; height: 70rpx; position: absolute; top: 50%; right: 0; margin-top: -35rpx; background-color: #d9c39f; border-radius: 40rpx; font-size: 20rpx; color: #ffffff; display: flex; justify-content: center; align-items: center;transition:transform 0.15s ease-out;}
.store-item .btn-map-hover{ transform: scale(0.9);}

.person-frame { background-color: #efebea; padding-bottom: 10rpx;}
.person-info{ padding: 40rpx 50rpx 0 50rpx; height: 150rpx; box-sizing: border-box; display: flex; align-items: center; position: relative;}
.person-info .title { font-size: 24rpx; color: #9d9c9a; position: absolute; top: 30rpx; left: 60rpx;}
.person-info .item{ width: 50%; border-bottom: 1rpx solid #cdc9c8; font-size: 35rpx; padding-bottom: 10rpx; padding-left: 10rpx; position: relative;}
.person-info .item::before{ content: ''; width: 10rpx; height: 10rpx; border-radius: 50%; background-color: #cdc9c8; position: absolute; bottom: -5rpx; left: -5rpx;}
.person-info .item:last-child::after{ content: ''; width: 10rpx; height: 10rpx; border-radius: 50%; background-color: #cdc9c8; position: absolute; bottom: -5rpx; right: -5rpx;}

.packages-item{ width:100%; padding: 30rpx 35rpx; position: relative; box-sizing: border-box; margin-top: 10rpx;}
.packages-item .line1{ display: flex; justify-content: space-between; align-items: center; padding: 0 25rpx 10rpx 25rpx; border-bottom: 1rpx solid #ebe9ea;}
.packages-item .line1 .name{ font-size: 30rpx;text-shadow: 0 0 3px rgba(55,44,30,0.25);}
.packages-item .line2{ padding: 50rpx 120rpx 0 25rpx; border-top: 1rpx solid #f9f7f8; display: flex; box-sizing: border-box;}
.packages-item-selected .line2{ border-top: 1rpx solid #e3d8c6;}
.packages-item .line2 .pro-item{ width: 130rpx; height: 106rpx; position: relative; margin-right: 35rpx; margin-bottom: 35rpx;}
.packages-item .line2 .pro-item .frame{ width: 100%; height: 100%; background-color: #e7e3e2; border-radius: 10rpx; transition:transform 0.15s ease-out; position: relative;}
.packages-item .line2 .pro-item-hover .frame{ transform: scale(0.9);}
.packages-item .line2 .pro-item::after{ content: '+'; font-size: 30rpx; color: #e7e3e2; position: absolute; top: 35rpx; right: -28rpx;}
.packages-item .line2 .pro-item:last-child::after{ content: '';}
.packages-item .line2 .pro-item image{ width: 130rpx; height: 130rpx; position: absolute; bottom: 0; left: 0;}
.packages-item .line3{ font-size: 28rpx; color: #e7e3e2; padding-left: 25rpx;}


.rule-frame{ width: 100%; position: fixed; left: 0; top: 0; bottom: 200rpx; z-index: 510; transition:top 0.2s ease-in-out;}
.rule-frame .icon-guanbi{ font-size: 30px; position: absolute; top: 60rpx; right: 60rpx;}
.rule-frame .tips-frame{ box-sizing: border-box; height: calc(100% - 200rpx); background-color: rgba(255,255,255,0.95); padding: 0 60rpx; display: flex; flex-direction: column; justify-content: center;}
.tips-frame .icon-tips{ font-size: 70rpx; color: #9e9c9d; margin-bottom: 10rpx;}
.tips-frame text{ font-size: 30rpx; line-height: 1.8; color: #9e9c9d;}
.rule-frame .line2 { height: 200rpx; background-color: rgba(239,235,234,0.95); box-sizing: border-box; padding: 0 60rpx; display: flex; align-items: center; font-size: 90rpx; color: #ffffff;}
.rule-frame .line2 .header-logo{ display: flex; align-items: center;}
.rule-frame .line2 .header-logo .logo { width: 60rpx; height: 80rpx; transition: all 0.25s ease-out; margin-right: 10rpx;}
.rule-frame .line2 .header-logo .logo-title { width: 125rpx; height: 80rpx; transition: all 0.25s ease-out;}

.pay-list { width: 100%; position: fixed; bottom: 200rpx; left: 0; z-index: 590; transition:bottom 0.2s ease-in-out;}
.pay-list-item { height: 170rpx; position: relative; display: flex; justify-content: flex-end; align-items: center; padding-right: 90rpx; background-color: #d9c39f}
.pay-list-item:before { content: ''; position: absolute; top: 0; left: 40rpx; right: 40rpx; height: 1px; background-color: #d8cfbe;}
.pay-list-item:first-child:before { height: 0}
.pay-list-item:after { content: ''; position: absolute; bottom: 0; left: 40rpx; right: 40rpx; height: 1px; background-color: #c6b192;}
.pay-list-item:last-child:after { height: 0}
.pay-list-item .pay-name { color: #ffffff; font-size: 36rpx; text-align: right; transition: all 0.15s ease-out;}
.pay-item-hover .pay-name { transform: scale(0.95);}
.pay-list-item .pay-balance { color: #ffffff; font-size: 64rpx; text-align: right; font-family: Helve; transition: all 0.15s ease-out;}
.pay-list-item .pay-balance text { font-size: 30rpx; margin-left: 6rpx;}
.pay-item-hover .pay-balance { transform: scale(0.95);}
.pay-list-bg { width: 100%; height: 100vh; position: fixed; top: 0; left: 0; background-color: rgba(0, 0, 0, 0); z-index: 589;}
