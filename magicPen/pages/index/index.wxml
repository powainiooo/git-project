<!--index.wxml-->
<view class="container">
  <!--轮播图-->
  <banner listData="{{bannerList}}"></banner>

  <!--定位-->
  <location locationData="{{locationData}}"></location>

  <!--导航栏-->
  <view  style="z-index: {{guideStep === 1 ? 10 : 0}}; position: relative;">
    <nav-bar></nav-bar>
  </view>


  <!--作品列表-->
  <view class="title">精选作品</view>
  <view class="works-list">
    <list-item wx:for="{{worksList}}"
               wx:for-item="item"
               wx:key="{{item.userId}}"
               itemData="{{item}}"></list-item>
  </view>
  <view class="loading">
    <view class="btn" wx:if="{{!isWorksLIstEnd}}" bindtap="pageNoAdd">
      <view>更多作品</view>
      <image src="../../res/index/arrow-down.png" mode="widthFix"></image>
    </view>
    <view class="btn" wx:if="{{isWorksLIstEnd}}">没有更多了</view>
  </view>

  <!--指导-->
  <guide useGuide="{{useGuide}}" bindchangeStep="changeStep"></guide>
</view>


<button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" style="display: none;"> 获取头像昵称 </button>

<i-message id="message" />