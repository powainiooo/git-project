.call-title { width: 370rpx; margin: 15rpx auto 30rpx auto;}
.call-title .dot { width: 10rpx; height: 10rpx; border-radius: 50%; background-color: #ffffff; margin: 0 30rpx;}
.call-desc { width: 100%; font-size: 32rpx; color: #279e88; text-align: center; margin-top: 20rpx; line-height: 1.8; letter-spacing: 4rpx;}


.photo-desc { width: 100%; font-size: 26rpx; color: #279e88; text-align: center; margin-top: 20rpx; line-height: 1.8; letter-spacing: 4rpx;}

.coin-line { height: 80rpx; background-color: #eff2f9; padding: 0 60rpx; display: flex; align-items: center; justify-content: space-between; margin-top: 40rpx;}
.coin-line .mine { font-size: 26rpx; color: #279e88; display: flex; align-items: center;}
.coin-line .cost { font-size: 26rpx; color: #ff306a; display: flex; align-items: center;}
.coin-line .icon-pea { width: 50rpx; margin-top: 16rpx;}

.call-works-title { background-color: #ffffff; font-size: 22rpx; color: #a1aaac; margin-top: 0}

.photo-btn { width: 240rpx; margin: 40rpx auto 60rpx auto;}

.photo-recharge { width: 240rpx; display: flex; justify-content: flex-end; align-items: center; font-size: 26rpx; color: #ff306a;}
.photo-recharge .icon-pea { width: 60rpx; margin-top: 16rpx; margin-right: 10rpx;}

.modal-content .txt1 { font-size: 32rpx; color: #30aac2; text-align: center; padding: 60rpx 50rpx;}
.modal-content .btn { width: 240rpx; margin: 0 auto 50rpx auto;}
.modal-content .btn .pea{ width: 50rpx; margin-top: 20rpx; margin-left: 15rpx;}

.wind-success-frame { width: 100%; height: 100vh; position: fixed; top: 0; left: 0; z-index: 100; background-color: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; flex-direction: column; animation: frame 1s linear both;}
@keyframes frame {
   0%{ opacity: 0;}
   100%{ opacity: 1;}
}
.wind-success-frame .images { width: 500rpx; position: relative; animation: scaleIn 0.5s ease-out 1s both;}
@keyframes scaleIn {
   0% { transform: scale(0)}
   100% { transform: scale(1)}
}
.wind-success-frame .images .in { width: 350rpx; margin-left: 75rpx;}
.wind-success-frame .images .light { width: 650rpx; height: 650rpx; position: absolute; top: -75rpx; left: -75rpx; animation: light4 10s linear infinite; z-index: -1}
@keyframes light4 {
   0% { transform: rotateZ(360deg); opacity: 0.2;}
   20%, 60% { opacity: 1;}
   40%, 80% { opacity: 0.2;}
   100% { transform: rotateZ(0deg); opacity: 1}
}
.wind-success-frame .content { width: 490rpx; animation: content 0.5s ease-out 2s both; margin-top: 40rpx; position: relative; z-index: 10;}
@keyframes content {
   0% { transform: translate(0, 100rpx); opacity: 0;}
   100% { transform: translate(0, 0); opacity: 1;}
}
