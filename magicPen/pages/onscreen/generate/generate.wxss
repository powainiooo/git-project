.generate-frame { width: 100%; height: calc(100vh - 140rpx); overflow: hidden; position: relative;}
.camera-frame { width: 100%; height: 100vh; overflow: hidden; position: absolute; top: 0; left: 0;}
.camera-container { width: 233rpx; height: 233rpx; position: relative; top: 184rpx; left: 233rpx;}
.camera-container .cover{ width: 750rpx; height: 1333rpx; position: fixed; top: 0; left: 0;}
.camera-container .cover cover-image{ width: 100%; height: 100%;}

.animation-frame { width: 100%; height: 100vh; overflow: hidden;}
.animation-frame .cover { width: 750rpx; height: 1333rpx; position: fixed; top: 0; left: 0;}

.btns-frame { width: 100%; height: 140rpx; background-color: #ffffff; display: flex; justify-content: space-around; align-items: center; position: absolute; left: 0; bottom: 0;}
.btns-frame .btn { width: 240rpx; height: 58rpx; border: 4rpx solid #999999; border-radius: 15rpx; font-size: 28rpx; color: #999999; display: flex; justify-content: center; align-items: center; letter-spacing: 8rpx;}
.btns-frame .btn image { width: 38rpx; margin-right: 10rpx;}