/* pages/fenxiaoshang/index.wxss */
page{background-color: #f3f3f3;}
.orderNav{display: flex;background-color: #fff;position: fixed;top:0;width: 100%;z-index: 100;}
.orderNav_li{flex:1;text-align: center;font-size: 30rpx;color: #999;line-height: 100rpx;border-bottom: 2rpx solid #fff;}
.orderNav_li.on{color: #de3031;border-bottom: 2rpx solid #de3031;}

.te{text-overflow:ellipsis; white-space:nowrap; overflow:hidden;}
.list{margin:0 30rpx 30rpx;padding-top:102rpx;}
.list_li{background-color: #fff;margin-top: 16rpx;padding: 20rpx;}
.head{font-size: 30rpx;color: #333;}
.head .img{height: 86rpx;width: 86rpx;border:2rpx solid #e5e5e5;border-radius: 50%;float: left;margin-right:24rpx;}
.head .name{margin-top:25rpx;display: inline-block;max-width: 220rpx;}
.line{display: flex;justify-content:space-between;overflow: hidden;}
.money{font-size: 30rpx;color: #666;max-width: 300rpx;display: table;height: 90rpx;text-align: right;}
.money .txt{display: table-cell;vertical-align: middle;}
.num{font-size: 26rpx;color: #999;margin-top: 60rpx;}
