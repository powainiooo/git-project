<view class="camera-frame" wx:if="{{showCamera}}">
   <camera class="camera-container" animation="{{cameraAni}}">
      <cover-view class="cover" animation="{{coverAni}}">
         <cover-image src="../../../res/web/module.png"></cover-image>
      </cover-view>
   </camera>
</view>
<view class="animation-frame">
   <image src="../../../res/web/module.png"
          animation="{{coverAni}}"
          class="cover"
          bindload="coverLoad"></image>
</view>
<image src="{{photos}}" mode="widthFix" wx:if="{{photosWidth !== 0}}"></image>
<view>照片宽：{{photosWidth}}，照片高：{{photosHeight}}</view>