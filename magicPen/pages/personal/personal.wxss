.personal-container .user { padding: 60rpx 110rpx; display: flex; align-items: center; border-bottom: 2rpx solid #f0f0f0; position: relative;}
.personal-container .user .avatar { transform: scale(1.8); margin-right: 90rpx;}
.personal-container .user text { width: 260rpx; font-size: 32rpx; color: #151515;}
.personal-container .user .icon-qrcode { width: 70rpx; position: absolute; top: 66rpx; right: 140rpx;}
.personal-container .user .icon-avatar { width: 140rpx;}
.personal-container .user .btn-auth { margin: 0; font-size: 28rpx; margin-left: 90rpx;}

.personal-container .accout { padding: 15rpx 0; display: flex;}
.personal-container .accout view{ flex: 1; text-align: center; font-size: 32rpx; color: #151515; padding: 10rpx 0 20rpx 0;}
.personal-container .accout view.fans { border-right: 2rpx solid #f0f0f0; position: relative;}
.personal-container .accout view.coin { background: url(data:image/png;base64,) no-repeat; background-size: 50rpx; background-position: 72% 85%; position: relative;}

.personal-container .hr { height: 18rpx; border-top: 1rpx solid #f0f0f0; border-bottom: 1rpx solid #f0f0f0; background-color: #eff2f9;}
.personal-container .accout view .fans-add { font-size: 28rpx; color: #ff3067; position: absolute; top: 0; right: 120rpx; animation: add 2s linear both;}
@keyframes add {
   0% { transform: scale(0)}
   20%,40%,60%,80% { transform: scale(2)}
   30%,50%,70% { transform: scale(1)}
   100% { transform: scale(0)}
}

.personal-container .link-line { height: 100rpx; border-bottom: 3rpx solid #f0f0f0; display: flex; align-items: center; padding-left: 70rpx; position: relative;}
.personal-container .link-line .arrow { position: absolute; top: 25rpx; right: 40rpx;}
.personal-container .link-line image{ width: 70rpx; margin-right: 30rpx; margin-top: 15rpx;}
.personal-container .link-line text{ font-size: 32rpx; color: #8b8e98;}
.personal-container .link-line .btn{ width: 100%; height: 100%; position: absolute; top: 0; left: 0; opacity: 0;}

.info-modal { position: relative;}
.info-modal .user { display: flex; align-items: center; margin: 30rpx;}
.info-modal .user text { font-size: 28rpx; color: #151515; margin-left: 10rpx;}
.qrcode-canvas { margin: 0 auto;}
.info-modal .hint { font-size: 32rpx; color: #999999; margin: 20rpx 0 30rpx 0; text-align: center;}

.qrcode-avatar { width: 100rpx; height: 100rpx; border-radius: 18rpx; position: absolute; top: 180rpx; left: 180rpx; border: 6rpx solid #ffffff; overflow: hidden; box-sizing: border-box;}
.qrcode-avatar cover-image { width: 100%; height: 100%;}
