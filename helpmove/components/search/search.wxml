<view class="c-search">
   <image src="../../res/img/go.png" mode="widthFix" class="logo"></image>
   <image src="../../res/img/title-events.png" mode="widthFix" class="title"></image>
   <view class="c-search-frame">
      <image src="../../res/img/frame.png" class="bg"></image>
      <view class="c-search-keywords">
         <input type="text"
                class="c-search-input"
                placeholder="输入活动、艺人或城市"
                placeholder-style="color: #b5b5b7"
                bindinput="bindKeyInput"
                value="{{keywords}}"/>
         <view class="btn-search" bindtap="doSearch"></view>
      </view>
      <view class="c-search-date">
         <view class="c-search-input" bindtap="showCalendar">{{selectedDate === '' ? '或选择日期' : selectedDate}}</view>
         <view class="btn-date"></view>
      </view>
   </view>
   <view class="c-search-banner">
      <banner src="{[url}}" id="{{id}}"></banner>
   </view>
</view>
<view class="datepicker-frame" wx:if="{{showDate}}">
   <datepicker currentDate="{{selectedDate}}" bindselectDate="getDate"></datepicker>
</view>

