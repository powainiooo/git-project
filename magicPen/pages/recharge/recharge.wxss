.recharge { min-height: 100vh; background-color: #eff2f9;}
.recharge .line1 { height: 70rpx; display: flex; align-items: center; font-size: 28rpx; color: #15191b; padding-left: 70rpx;}
.recharge .line1 .icon{ width: 50rpx; margin: 15rpx 40rpx 0 20rpx;}
.recharge .line1 .price{ color: #ff3067;}
.recharge .frame{ background-color: #ffffff; overflow: hidden;}
.recharge .frame .title{ text-align: center; margin-top: 60rpx;}
.recharge .frame .title view:first-child{ color: #da570d; font-weight: bold; font-size: 40rpx; letter-spacing: 2rpx; margin-bottom: 20rpx;}
.recharge .frame .title view:nth-child(2){ color: #85baad; font-size: 24rpx; letter-spacing: 6rpx; margin-bottom: 50rpx;}
.recharge .list{ display: flex; flex-wrap: wrap; justify-content: center;}
.recharge .list .item { width: 200rpx; height: 200rpx; margin: 0 20rpx 10rpx 20rpx;}
.recharge .btn { width: 240rpx; margin: 70rpx auto;}