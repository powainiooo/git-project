@import '../../static/css/mixin.styl'

.Chat
  &-list
    margin 0 12px; padding-bottom 20px;
  &-item
    margin-bottom 16px;
    &-date
      font-size 10px; color #999999; margin-bottom 18px; margin-top 16px; text-align center;
    &-head
      size(40px, 40px); border-radius 50%; background-color #D5D5D5; overflow hidden; margin-right 8px; float left;
      image
        size(100%, 100%);
    &-content
      position relative
    &-wrapper
      float left; max-width 255px; margin-top 2px;
    &-message
      display flex; min-height 36px;
    &-status
      width 20px; display flex; align-items flex-end; font-size 10px; color #999999; margin-right 8px;
    &-box
      background-color #FFFFFF; border-radius 4px; text-align justify; word-break break-all; flex 1 0 0;
    &-goods
      padding 12px; width 222px;
      .title
        height 40px; overflow hidden; text-align justify;
      image
        size(198px, 198px); border-radius 2px; margin-bottom 8px; display block;
    &-text
      padding 8px;
    &-problem
      .item
        padding 8px; color #3B76FF;
    &-img
      padding 0; font-size 0; width 150px; background-color #D8D8D8; border-radius 4px; overflow hidden;
      image
        width 100%;
    &-audio
      acenter(); height 100%; min-width 65px;
      image
        margin-left 16px; margin-right 4px;
    &-video
      size(150px, 150px); overflow hidden; border-radius 4px; position relative;
      image
        size(150px, 150px);
      .play
        width 24px; abTL(50%, 50%); transform translate(-50%, -50%);
    &-loc
      width 222px; background-color #FFFFFF; border-radius 4px; overflow hidden; padding-top 8px;
      view
        margin-left 8px; margin-right 8px;
      image
        size(100%, 130px); display block;
  .Chat-custom
    .Chat-item-head
      float right; margin-right 0; margin-left 8px;
    .Chat-item-wrapper
      float right
    .Chat-item-audio
      flex-direction row-reverse;
      image
        transform scale(-1); margin-left 4px; margin-right 16px;
  &-footer
    margin 7px 12px;
    input, .btn
      flex 1 0 auto; width calc(100vw - 120px); height 36px; border-radius 20px; background-color #FFFFFF; padding 0 20px; margin-right 8px;
    .btn
      font-size 14px; color #333333; line-height 36px; text-align center;
  &-emoji
    border-top 1px solid #E5E5E5; background-color #F5F5F5; position relative;
    &-scroll
      height 188px;
    &-list
      margin 20px 0 20px 4px; display flex; flex-wrap wrap;
    &-item
      size(46px, 26px); text-align center; margin-bottom 16px; font-size 26px; line-height 26px;
    &-toolbar
      size(138px, 58px); background-color #F5F5F5; abBR(0, 0); center();
      .btn
        size(53px, 36px); border-radius 4px; background-color #FFFFFF; center(); font-size 14px; color #FFFFFF; margin 0 4px;
      .btn-send
        background-color #FE322B;
      .btn-disabled
        opacity .5
  .footer-chat
    background-color #F5F6F7; display block; padding 0; bottom -188px; transition bottom .3s ease-out; padding-bottom constant(safe-area-inset-bottom); padding-bottom env(safe-area-inset-bottom);
    .tools-container
      height 188px; overflow hidden;
    .bottom-cover
      width 100%; height constant(safe-area-inset-bottom); height env(safe-area-inset-bottom); fxBL(0, 0); background-color #F5F6F7; z-index 100;
    .tools
      margin 16px 12px; display flex;
      &-item
        width 54px; margin-right 32px;
        &>.center
          size(54px, 54px); background-color #FFFFFF; border-radius 4px; margin-bottom 8px;
        .name
          font-size 12px; color #666666; text-align center;
  .footer-chat-show
    bottom 0
  .audio-hint
    size(152px, 152px); fxTL(50%, 50%); transform translate(-50%, calc(-50% - 48px)); background-color #999999; border-radius 8px;
    .icons
      display flex; justify-content center; align-items flex-end; margin-top 32px; margin-bottom 24px;
  .audio-hint-cancel
    background-color #FFAD56
  .video-frame
    size(100%, 100vh); fxTL(0, 0); background-color rgba(0, 0, 0, 1); z-index 10000;
    video
      size(100%, 88vh); background-color #000000;
    .close
      width 24px; abTR(16px, 16px); z-index 10;
    .play
      width 48px; abTL(50%, 50%); z-index 10; transform translate(-50%, -50%);
  &-goods
    size(135px, 186px); abTR(-190px, 7px); background url("data:image/png;base64,") no-repeat; background-size 100% 100%; padding 13px 13px 16px 13px;
    image
      size(110px, 110px); border-radius 2px; display block;
  .msgBottom
    height calc(50px + constant(safe-area-inset-bottom));
    height calc(50px + env(safe-area-inset-bottom));
    transition height .1s ease-out;
  .msgBottom-show
    height calc(50px + 188px + constant(safe-area-inset-bottom));
    height calc(50px + 188px + env(safe-area-inset-bottom));
