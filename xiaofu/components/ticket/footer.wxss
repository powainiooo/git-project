.footer-container { width: 100%; height: 160rpx;}
.footer{ width: 100%; height: 160rpx; position: fixed; bottom: -160rpx; left: 0; z-index: 900; transition: bottom 0.4s cubic-bezier(.22,.62,.37,1);}
.footer-show { bottom: 0;}
.detail-footer { width: 100%; height: 100%; background-color: #fff; display: flex; box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.1);}
.detail-footer .price { width: 64%; font-size: 100rpx;font-family: 'Helve'; padding-bottom: 20rpx; display: flex; justify-content: center; align-items: center; color: #002aac;}
.detail-footer .price .unit { font-size: 33rpx; align-self: flex-end; margin-bottom: 30rpx; margin-left: 10rpx;}
.detail-footer .btn { width: 36%; font-size: 34rpx; color: #ffffff; background-color: #002aac; padding-bottom: 20rpx; display: flex; justify-content: center; align-items: center;}
.detail-footer .btn-diabled { background-color: rgb(181,181,182);}
.detail-footer .stop-sale { width: 64%; display: flex; justify-content: center; color: #888888; font-size: 24rpx; flex-direction: column;}
.detail-footer .stop-sale view { margin-left: 70rpx;}
.detail-footer .stop-sale view:first-child { font-size: 34rpx; margin-top: -20rpx;}

.buy-footer { width: 100%; height: 100%; background-color: #fff; display: flex; box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.1);}
.buy-footer-shaodow { box-shadow: none; }
.buy-footer .ticket-type,.buy-footer .ticket-number { padding-bottom: 10rpx; display: flex; justify-content: center; align-items: center; font-size: 24rpx;background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-size: 22rpx 13rpx;}
.buy-footer .ticket-type { width: 35%; background-color: #ffffff;  background-position: 78% 70rpx;}
.buy-footer .ticket-number { width: 25%; background-color: #f5f5f5; font-size: 33rpx;  background-position: 78% 70rpx;align-items: stretch;}
.buy-footer .ticket-number view { width: 100rpx; height: 100%; display: flex; justify-content: center; align-items: center;}
.buy-footer .ticket-number text {font-size: 24rpx;}
.buy-footer .btn { width: 75%; background-color: #002aac; padding-bottom: 10rpx; display: flex; justify-content: center; align-items: center; font-size: 34rpx; color: #fff;}
.buy-footer .btn-disabled { background-color: #b5b5b6;}
