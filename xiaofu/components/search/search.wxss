.c-search { min-height: 100vh; background: #002ab0; position: relative; overflow: hidden;}
.c-search .logo { width: 440rpx; position: absolute; top: 0; left: 0; z-index: 0;}
.c-search .title { width: 400rpx; margin: 90rpx 0 50rpx 170rpx}

.c-search-frame { width: 720rpx; height: 474rpx; position: relative; margin: 0 auto; z-index: 10;}
.c-search-frame .bg { width: 100%; height: 100%;}

.c-search-keywords { display: flex; align-items: center; position: absolute; top: 74rpx; left: 110rpx;}
.c-search-keywords .c-search-input { width: 440rpx; box-sizing: border-box; height: 80rpx; line-height: 80rpx; font-size: 32rpx; border: none; border-right: 2rpx solid #b5b5b7; margin-right: 20rpx;}
.c-search-keywords .btn-search { width: 80rpx; height: 80rpx; background: url(data:image/png;base64,) no-repeat; background-position: center center; background-size: 36rpx;}

.c-search-date { display: flex; align-items: center; position: absolute; top: 250rpx; left: 110rpx;}
.c-search-date .c-search-input { width: 440rpx; box-sizing: border-box; height: 80rpx; line-height: 80rpx; font-size: 32rpx; border: none; border-right: 2rpx solid rgba(255, 255, 255, 0.1); margin-right: 20rpx; color: #ffffff}
.c-search-date .btn-date { width: 80rpx; height: 80rpx; background: url(data:image/png;base64,) no-repeat; background-position: center center; background-size: 44rpx;}

.c-search-banner { margin-top: -360rpx; position: relative; z-index: 0;}

.datepicker-frame { width: 100%; position: fixed; top: 120rpx; left: 0; z-index: 100}
