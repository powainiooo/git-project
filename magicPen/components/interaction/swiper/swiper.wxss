.swiper-frame { width: 100%; height: 670rpx; position: relative; overflow: hidden;}
.swiper-bg { width: 100%; height: 100%;}
.wheel { width: 400rpx; position: absolute; bottom: -134rpx; left: 175rpx; transition: transform 0s cubic-bezier(.21,.59,.55,1.38);}
.light { width: 500rpx; height: 500rpx; position: absolute; top: 0rpx; left: 125rpx; animation: light6 1s linear both;}
@keyframes light6 {
   0% { transform: rotateZ(0deg) scale(0); opacity: 0}
   40% { transform: rotateZ(-40deg) scale(1); opacity: 1}
   60% { transform: rotateZ(-60deg) scale(1); opacity: 1}
   100% { transform: rotateZ(-100deg) scale(0); opacity: 0}
}

.roll-frame { position: absolute; left: 50%; top: 800rpx; transform-origin: 0 0; transition: transform 0s cubic-bezier(.21,.59,.55,1.38);}
.transition-end { transition-duration: 0.4s}
.roll-item {position: absolute; top: 0; left: 0; transform-origin: 0 600rpx;}
.roll-img { width: 400rpx; height: 400rpx; margin: -200rpx 0 0 -200rpx;}
.roll-item:nth-child(1) { transform: translate(0, -600rpx);}
.roll-item:nth-child(2) { transform: translate(0, -600rpx) rotateZ(45deg);}
.roll-item:nth-child(3) { transform: translate(0, -600rpx) rotateZ(90deg);}
.roll-item:nth-child(4) { transform: translate(0, -600rpx) rotateZ(135deg);}
.roll-item:nth-child(5) { transform: translate(0, -600rpx) rotateZ(180deg);}
.roll-item:nth-child(6) { transform: translate(0, -600rpx) rotateZ(225deg);}
.roll-item:nth-child(7) { transform: translate(0, -600rpx) rotateZ(270deg);}
.roll-item:nth-child(8) { transform: translate(0, -600rpx) rotateZ(315deg);}

.hint-img { width: 128rpx; position: absolute; top: 420rpx; left: 250rpx; z-index: 100; animation: hintLeft 1s 4 linear; animation-fill-mode: both;}
@keyframes hintLeft {
   0% { transform: translate(0, 0); opacity: 1;}
   60% { transform: translate(200rpx, 0); opacity: 1;}
   80%,100% { transform: translate(200rpx, 0); opacity: 0;}
}
