.swiper-frame { width: 100%; height: 700rpx;}
.swiper-frame swiper-item { width: 250rpx; display: flex; justify-content: center; align-items: center;}
.swiper-frame .content { width: 180rpx; height: 240rpx; transform-origin: 0 50%; transform: scale(0.5); transition: transform 0.3s linear;}
.swiper-frame .current { transform: scale(1);}