/* pages/bargain/index.wxss */

page {
  background: #f3f3f3;
}

.wrapper {
  padding-bottom: 98rpx;
}

.wrapper .bargain_header {
  position: relative;
}

.wrapper .bargain_header image {
  display: block;
  width: 100%;
  height: 100%;
}

.wrapper .bargain_atmosphere {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.wrapper .bargain_atmosphere_num {
  width: 255rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(232, 141, 139, 1);
  opacity: 0.8;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  margin: 0 15rpx;
}

.wrapper .bargain_atmosphere_num image {
  width: 26rpx;
  margin-right: 10rpx;
}

.wrapper .bargain_atmosphere_num text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.wrapper .bargain_atmosphere_buyed {
  width: 430rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(232, 141, 139, 1);
  opacity: 0.8;
  border-radius: 28rpx;
  position: relative;
}

.wrapper .bargain_atmosphere_buyed .img {
  width: 28rpx;
  position: absolute;
  top: 7rpx;
  left: 10rpx;
}

.bargain_atmosphere_buyed .contents {
  display: flex;
  align-items: center;
}

.bargain_atmosphere_buyed .contents .text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  height: 40rpx;
  line-height: 40rpx;
}

.wrapper .bargain_atmosphere_buyed .one {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  -moz-text-overflow: ellipsis;
  white-space: nowrap;
}

.wrapper .bargain_atmosphere_buyed .two {
  color: #ffde00;
}

.wrapper .bargain_atmosphere_buyed .thr {
  width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  -moz-text-overflow: ellipsis;
  white-space: nowrap;
}

.wrapper .bargain_atmosphere_buyed swiper {
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 45rpx;
}

.itemList {
  width: 690rpx;
  height: 270rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin: 15rpx auto;
  display: flex;
  align-items: center;
  position: relative;
}

.itemList .img image {
  width: 206rpx;
  border-radius: 4rpx;
  margin: 32rpx 18rpx;
}

.itemList .content {
  margin-right: 18rpx;
}

.itemList .content text {
  display: block;
}

.itemList .content .title {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  height: 85rpx;
  overflow: hidden;
}

.itemList .content .base_price {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(236, 61, 82, 1);
  margin-top: 30rpx;
}

.itemList .content .base_price text {
  display: inline-block;
}

.itemList .content .base_price .money {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(236, 61, 82, 1);
}

.itemList .content .price {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 30rpx;
}

.itemList .content .btn {
  width: 162rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(90deg, rgba(235, 51, 73, 1) 0%, rgba(244, 92, 67, 1) 100%);
  border-radius: 30rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  position: absolute;
  right: 18rpx;
  bottom: 18rpx;
  padding: 0;
}
