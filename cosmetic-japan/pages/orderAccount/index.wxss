/* pages/orderAccount/index.wxss */
.bottomBtn{
	z-index: 10;
}
.upload-frame { width: 300rpx;}
.upload-frame .title { font-size: 28rpx; text-align: center; margin-bottom: 10rpx; }
.upload-frame .imgs { width: 200rpx; height: 200rpx; margin: 0 auto; border: 2px dashed #00A7D7; border-radius: 20rpx; display: flex; justify-content: center; align-items: center; color: #00A7D7; }
.upload-frame .imgs text { font-size: 50rpx; }
.upload-frame .imgs image { width: 100%; height: 100%; display: block; }

.kdfee_sm {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
}

.TipMask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999999999;
  overflow: hidden;
}

.TipMask .tipBox{
  width: 56%;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 50rpx 60rpx 40rpx;
  border-radius: 6rpx;
}

.TipMask .tipBox .title {
  font-size: 36rpx;
  color: #373737;
  font-weight: 400;
}


.TipMask .tipBox text{
  font-size: 28rpx;
  color: #7b7b7b;
  margin: 0 0 15rpx;
  display: block;
}

.TipMask .tipBox .textBtn{
  font-size: 28rpx;
  color: #4db53c;
  text-align: right;
}

