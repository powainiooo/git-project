@import "mixin.styl"

*
  margin 0
  padding 0
  box-sizing border-box
body
  background-color #000000

.flex
  display flex
.center
  center()
.between
  between()

.ivu-input
  border none
  background-color #EEEEEF
  height 40px
  border-radius 10px
  padding 4px 10px

.ivu-btn
  height 40px
  line-height 40px
  border-radius 10px
  border none
  bgG()
  color #ffffff
  box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.15)
  &[disabled]
    background #C8C9CA
    color  #ffffff
  &[disabled]:hover
    background #C8C9CA
    color  #ffffff
  &:hover
    color #ffffff
.ivu-input-group-append
  background-color transparent
  padding 0
  border-radius 0 10px 10px 0
  overflow hidden
  border none
  .ivu-btn
    color #ffffff
    font-size 10px



.ivu-select-single
  .ivu-select-selection
    height 40px
    border none
    border-radius 10px
    background-color #EEEEEF
    .ivu-select-placeholder
      height 40px
      line-height 40px
    .ivu-select-arrow
      color #ffffff
      z-index 5
      right 14px
    &:after
      content ''
      size(40px, 40px)
      line-height 40px
      abBR(0, 0)
      bgG()
      border-radius 0 10px 10px 0
      color rgba(255, 255, 255, .5)
.txt
  font-size 10px
  line-height 15px
  color #9E9E9F
  text-decoration none
.txt2
  font-size 10px
  line-height 15px
  color #C8C9CA
  text-decoration none
  span
    color #000000
.flip-box
  size(300px)
  border-radius 10px
  overflow hidden
  position relative
  background-color #ffffff
  &:after
    content ''
    size(57px, 57px)
    abBR(0, 0)
    background-image url('data:image/png;base64,')
    background-repeat no-repeat
.bottom-box
  background-color #ffffff
  border-radius 10px 10px 0px 0px
  overflow-y auto
  position relative
  &::-webkit-scrollbar
    width 3px
    background-color transparent
  &::-webkit-scrollbar-thumb
    background-color #5B85E6

.form
  margin 40px 25px 30px 25px
  position relative
  &-title
    font-size 18px
    line-height 1
    margin-bottom 20px
  .ivu-form-item
    margin-bottom 10px
  .txt
    margin-left 10px
.tab-bar
  height 40px
  display flex
  border-radius 10px
  overflow hidden
  background-color #EEEEEF
  &-item
    flex 1
    center()
    cursor pointer
    font-size 14px
    color #9E9E9F
  &-active
    bgG()
    color #ffffff
.tab-bar-min
  height 25px
  border-radius 5px
  .tab-bar-item
    font-size 10px
.hint-list
  list-style none
  margin 0 25px
  li
    center()
    margin-bottom 18px
    .index
      width 25px
      margin-right 5px
      img
        display block
        height 100%
    .txt2
      flex 1
.notice-list
  li
    padding 20px 0
    position relative
    margin-bottom 0
    &:after
      content ''
      position absolute
      bottom 0
      left -25px
      right -25px
      height 1px
      background-color #EEEEEF


