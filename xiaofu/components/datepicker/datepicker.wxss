.datepicker .date-week { width: 700rpx; margin: 0 auto 6rpx auto; display: flex}
.datepicker .date-week .date-week-item { width: 84rpx; height: 70rpx; margin: 0 8rpx; display: flex; justify-content: center; align-items: center; font-size: 30rpx; color: rgba(255, 255, 255, 0.5)}

.datepicker .date-days { width: 700rpx; margin: 0 auto 120rpx auto; display: flex; flex-wrap: wrap;}
.datepicker .date-days .date-days-item { width: 84rpx; height: 84rpx; box-sizing: border-box; border-radius: 50%; margin:0 8rpx 15rpx 8rpx; border: 4rpx solid rgba(255, 255, 255, 0.5); font-size: 32rpx; display: flex; justify-content: center; align-items: center; color: rgba(255, 255, 255, 0.5); font-family: 'Helve';}
.datepicker .date-days .date-days-item-light { color: #ffffff; border-color: #ffffff;}
.datepicker .date-days .date-days-item-active { color: #0129ac; border-color: #ffffff; background-color: #ffffff;}

.datepicker .btn-confirm { width: 530rpx; height: 80rpx; background-color: #ffffff; border-radius: 40rpx; font-size: 32rpx; color: #0129ac; margin: 0 auto 100rpx auto; display: flex; justify-content: center; align-items: center; box-shadow: 0 2rpx 3rpx rgba(0, 0, 0, 0.2);}
.datepicker .btn-confirm-disabled { background-color: #cacaca; color: #717171;}

.fadeIn1 { animation: fadeIn 0.2s linear both;}
.fadeIn2 { animation: fadeIn 0.2s linear 0.4s both;}
@keyframes fadeIn {
   0% { opacity: 0;}
   100% { opacity: 1;}
}
.slideIn { animation: slideIn 0.4s ease-out 0.5s both;}
@keyframes slideIn {
   0% { transform: translateY(100px); opacity: 0;}
   100% { transform: translateY(0); opacity: 1;}
}
.zoomIn { animation: zoomIn 0.4s cubic-bezier(.18,.89,.65,1.45) 0.8s both;}
.zoomIn2 { animation: zoomIn 0.2s cubic-bezier(.18,.89,.65,1.45) 1.2s both;}
@keyframes zoomIn {
   0% { transform: scale(0.8); opacity: 0;}
   100% { transform: scale(1); opacity: 1;}
}
