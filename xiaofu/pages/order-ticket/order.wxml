<view class="container bg-gray" id="bodyFrame">
    <header-view showMenu="{{false}}"></header-view>
    <view class='body order-body' animation="{{indexAniData}}" wx:if="{{showTicketIndex}}">
        <view class='title-en'><text>Order\nCenter</text></view>
        <view class='title-cn'><text>订单中心</text></view>

        <view class="order-list">
            <view class="order-item"
                  wx:for="{{listData}}"
                  wx:for-index="index"
                  wx:for-item="item"
                  wx:key="index"
                  data-index="{{index}}"
                  bindtap="gotoDetail"
                  hover-class="order-item-touch"
                  hover-start-time="10">
                <order-item itemData="{{item}}" itemIndex="{{index}}"></order-item>
            </view>
        </view>

        <view class="footer-tab">
            <navigator class="active"><text>已购票务</text></navigator>
            <navigator url="/pages/order-drink/order"><text>小夫特饮</text></navigator>
        </view>
    </view>
</view>

